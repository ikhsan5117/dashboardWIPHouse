@model dashboardWIPHouse.Models.BeforeCheckSummaryRVI

@{
    ViewData["Title"] = "Before Check - RVI Management";
}

<style>
    /* ===== IMPROVED MAIN DASHBOARD STATS ===== */
    .dashboard-stats-row {
        margin-bottom: 40px;
        padding: 0 15px;
    }

    .dashboard-stats-container {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        justify-content: space-between;
        align-items: stretch;
    }

    .stats-widget-wrapper {
        flex: 1;
        min-width: 300px;
        max-width: calc(33.33% - 16px);
    }

    .widget-simple-custom {
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        overflow: hidden;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        border: 1px solid rgba(0, 0, 0, 0.05);
        height: 100%;
        position: relative;
        display: flex;
        align-items: center;
    }

    .widget-simple-custom:hover {
        transform: translateY(-6px);
        box-shadow: 0 8px 35px rgba(0, 0, 0, 0.15);
        border-color: rgba(0, 0, 0, 0.1);
    }

    .widget-simple-custom .widget-icon {
        width: 120px;
        height: 100%;
        min-height: 160px;
        border-radius: 12px 0 0 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 4rem;
        color: #fff;
        position: relative;
        flex-shrink: 0;
    }

    .widget-simple-custom .widget-icon::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(135deg, rgba(255, 255, 255, 0.2) 0%, rgba(255, 255, 255, 0) 100%);
        border-radius: 12px 0 0 12px;
    }

    .widget-simple-custom .widget-icon i {
        position: relative;
        z-index: 2;
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
    }

    .widget-simple-custom .widget-content {
        padding: 35px 30px;
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: center;
        min-height: 160px;
    }

    .widget-simple-custom .widget-content h3 {
        margin: 0 0 10px 0;
        font-size: 2.4rem;
        font-weight: 400;
        line-height: 1.3;
        color: #2c3e50;
    }

    .widget-simple-custom .widget-content h3 strong {
        font-weight: 800;
        font-size: 3.6rem;
        display: block;
        line-height: 1.1;
        margin-bottom: 8px;
        color: #1a252f;
    }

    .widget-simple-custom .widget-content small {
        font-size: 1.6rem;
        color: #6c757d;
        font-weight: 500;
        line-height: 1.4;
    }

    /* Color themes for different statuses */
    .themed-background-danger { background: linear-gradient(135deg, #e74c3c, #c0392b); }
    .themed-background-warning { background: linear-gradient(135deg, #f39c12, #e67e22); }
    .themed-background-success { background: linear-gradient(135deg, #27ae60, #229954); }
    .themed-background-info { background: linear-gradient(135deg, #3498db, #2980b9); }
    .themed-background-critical { background: linear-gradient(135deg, #8e44ad, #7d3c98); }

    /* Responsive adjustments */
    @@media (max-width: 1200px) {
        .stats-widget-wrapper {
            min-width: 280px;
            max-width: calc(50% - 16px);
        }
    }

    @@media (max-width: 768px) {
        .stats-widget-wrapper {
            min-width: 100%;
            max-width: 100%;
        }
        
        .widget-simple-custom .widget-icon {
            width: 100px;
            min-height: 140px;
            font-size: 3.2rem;
        }
        
        .widget-simple-custom .widget-content {
            padding: 30px 25px;
            min-height: 140px;
        }
        
        .widget-simple-custom .widget-content h3 {
            font-size: 2.2rem;
        }
        
        .widget-simple-custom .widget-content h3 strong {
            font-size: 3.2rem;
        }
        
        .widget-simple-custom .widget-content small {
            font-size: 1.4rem;
        }
    }

    /* Custom widget styles */
    .widget-advanced-custom {
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        border: 1px solid rgba(0, 0, 0, 0.05);
        margin-bottom: 30px;
        overflow: hidden;
    }

    .widget-header-custom {
        background: linear-gradient(135deg, #667eea, #764ba2);
        color: white;
        padding: 20px 25px;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .widget-header-custom h3 {
        margin: 0;
        font-size: 1.4rem;
        font-weight: 600;
    }

    .widget-content-custom {
        padding: 25px;
    }

    /* Table styles */
    .table-custom {
        margin-bottom: 0;
    }

    .table-custom th {
        background: #f8f9fa;
        border-top: none;
        font-weight: 600;
        color: #495057;
        padding: 15px 12px;
        font-size: 0.9rem;
    }

    .table-custom td {
        padding: 12px;
        vertical-align: middle;
        border-top: 1px solid #dee2e6;
    }

    .table-custom tbody tr:hover {
        background-color: #f8f9fa;
    }

    /* Badge styles */
    .badge {
        font-size: 0.75rem;
        padding: 0.375rem 0.75rem;
        border-radius: 0.375rem;
    }

    .badge-danger { background-color: #dc3545; color: white; }
    .badge-warning { background-color: #ffc107; color: #212529; }
    .badge-success { background-color: #28a745; color: white; }
    .badge-info { background-color: #17a2b8; color: white; }
    .badge-secondary { background-color: #6c757d; color: white; }
</style>

<!-- Dashboard Header -->
<div class="content-header">
    <div class="header-section">
        <h1>
            <i class="gi gi-check"></i>Before Check RVI
            <br><small>Dashboard Before Check RVI</small>
        </h1>
    </div>
</div>

<!-- Top Stats Row -->
<div class="row">
    <div class="col-lg-12">
        <div class="widget-advanced-custom">
            <div class="widget-header-custom">
                <h3><i class="gi gi-stats"></i> Before Check Summary</h3>
            </div>
            <div class="widget-content-custom">
                <div class="row text-center">
                    <div class="col-xs-6 col-sm-3">
                        <div class="push-10">
                            <i class="gi gi-cargo text-danger" style="font-size: 2em;"></i>
                        </div>
                        <div class="h3 text-danger push-5">@Model.EmptyRaks</div>
                        <div class="text-muted">Empty Raks</div>
                    </div>
                    <div class="col-xs-6 col-sm-3">
                        <div class="push-10">
                            <i class="gi gi-cargo text-warning" style="font-size: 2em;"></i>
                        </div>
                        <div class="h3 text-warning push-5">@Model.PartialRaks</div>
                        <div class="text-muted">Partial Raks</div>
                    </div>
                    <div class="col-xs-6 col-sm-3">
                        <div class="push-10">
                            <i class="gi gi-cargo text-success" style="font-size: 2em;"></i>
                        </div>
                        <div class="h3 text-success push-5">@Model.FullRaks</div>
                        <div class="text-muted">Full Raks</div>
                    </div>
                    <div class="col-xs-6 col-sm-3">
                        <div class="push-10">
                            <i class="gi gi-cargo text-info" style="font-size: 2em;"></i>
                        </div>
                        <div class="h3 text-info push-5">@Model.TotalRaks</div>
                        <div class="text-muted">Total Raks</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- IMPROVED Main Dashboard Stats -->
<div class="dashboard-stats-row" id="main-stats">
    <div class="dashboard-stats-container">
        <div class="stats-widget-wrapper">
            <!-- Empty Raks Widget -->
            <a href="javascript:void(0)" class="widget widget-hover-effect1" onclick="filterTable('Empty')">
                <div class="widget-simple widget-simple-custom">
                    <div class="widget-icon themed-background-danger animation-fadeIn">
                        <i class="fa fa-times-circle"></i>
                    </div>
                    <div class="widget-content animation-pullDown">
                        <h3>
                            <strong id="main-empty">@Model.EmptyRaks</strong>
                            Raks
                        </h3>
                        <small>Empty Raks</small>
                    </div>
                </div>
            </a>
        </div>

        <div class="stats-widget-wrapper">
            <!-- Partial Raks Widget -->
            <a href="javascript:void(0)" class="widget widget-hover-effect1" onclick="filterTable('Partial')">
                <div class="widget-simple widget-simple-custom">
                    <div class="widget-icon themed-background-warning animation-fadeIn">
                        <i class="fa fa-exclamation-triangle"></i>
                    </div>
                    <div class="widget-content animation-pullDown">
                        <h3>
                            <strong id="main-partial">@Model.PartialRaks</strong>
                            Raks
                        </h3>
                        <small>Partial Raks</small>
                    </div>
                </div>
            </a>
        </div>

        <div class="stats-widget-wrapper">
            <!-- Full Raks Widget -->
            <a href="javascript:void(0)" class="widget widget-hover-effect1" onclick="filterTable('Full')">
                <div class="widget-simple widget-simple-custom">
                    <div class="widget-icon themed-background-success animation-fadeIn">
                        <i class="fa fa-check-circle"></i>
                    </div>
                    <div class="widget-content animation-pullDown">
                        <h3>
                            <strong id="main-full">@Model.FullRaks</strong>
                            Raks
                        </h3>
                        <small>Full Raks</small>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>

<!-- Before Check Details -->
<div class="col-lg-12">
    <div class="widget-advanced-custom">
        <div class="widget-header-custom">
            <h3><i class="gi gi-table"></i> Before Check Details</h3>
            <div class="widget-options">
                <button type="button" class="btn btn-sm btn-primary" onclick="refreshTable()">
                    <i class="fa fa-refresh"></i> Refresh Table
                </button>
            </div>
        </div>
        <div class="widget-content-custom">
            <div class="table-responsive">
                <table id="bc-table" class="table table-custom table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>No</th>
                            <th>Kode Rak</th>
                            <th>Kode Item</th>
                            <th>Qty</th>
                            <th>Type Box</th>
                            <th>Max Capacity</th>
                            <th>Capacity %</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Data will be loaded via AJAX -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let bcTable;

        function filterTable(status) {
            if (!bcTable) return;
            bcTable.column(7).search(status).draw();
            const tableElement = document.querySelector('#bc-table');
            if (tableElement) {
                tableElement.scrollIntoView({ behavior: 'smooth', block: 'start' });
            }
        }

        function refreshTable() {
            if (!bcTable) return;
            bcTable.ajax.reload();
        }

        // Initialize dashboard and DataTable
        $(document).ready(function () {
            // Initialize DataTable
            bcTable = $('#bc-table').DataTable({
                ajax: {
                    url: '@Url.Action("GetTableData", "BeforeCheck")',
                    dataSrc: 'data',
                    error: function (xhr, error, thrown) {
                        console.error('DataTable load error:', thrown);
                    }
                },
                columns: [
                    { data: 'no', searchable: false, orderable: true },
                    { data: 'kodeRak' },
                    { data: 'kodeItem' },
                    { 
                        data: 'qty',
                        render: function (data) {
                            return parseFloat(data).toFixed(2);
                        }
                    },
                    { data: 'typeBox' },
                    { data: 'maxCapacRak' },
                    { 
                        data: 'capacityPercentage',
                        render: function (data) {
                            return parseFloat(data).toFixed(1) + '%';
                        }
                    },
                    {
                        data: 'status',
                        render: function (data, type, row) {
                            let badgeClass = '';
                            switch (data) {
                                case 'Empty':
                                    badgeClass = 'badge badge-danger';
                                    break;
                                case 'Partial':
                                    badgeClass = 'badge badge-warning';
                                    break;
                                case 'Full':
                                    badgeClass = 'badge badge-success';
                                    break;
                                case 'Normal':
                                    badgeClass = 'badge badge-info';
                                    break;
                                default:
                                    badgeClass = 'badge badge-secondary';
                            }
                            return '<span class="' + badgeClass + '">' + data + '</span>';
                        }
                    }
                ],
                order: [[0, 'asc']],
                pageLength: 10,
                lengthMenu: [[10, 25, 50, 100], [10, 25, 50, 100]],
                language: {
                    search: "Search raks:",
                    lengthMenu: "Show _MENU_ entries",
                    info: "Showing _START_ to _END_ of _TOTAL_ entries",
                    infoEmpty: "Showing 0 to 0 of 0 entries",
                    infoFiltered: "(filtered from _MAX_ total entries)",
                    paginate: {
                        first: 'First',
                        last: 'Last',
                        next: 'Next',
                        previous: 'Previous'
                    }
                },
                dom: '<"row"<"col-sm-6"l><"col-sm-6"f>>rt<"row"<"col-sm-6"i><"col-sm-6"p>>',
                initComplete: function () {
                    console.log('Before Check DataTable initialized successfully');
                }
            });
        });
    </script>
}
