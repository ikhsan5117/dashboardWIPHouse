<style>
    body { font-family: 'Inter', sans-serif; background-color: #f8f9fa !important; color: #333 !important; margin: 0; padding: 20px; padding-top: 90px; }
    /* Blue Theme Colors */
    :root {
        --blue-primary: #2196F3;
        --blue-dark: #1976D2;
        --blue-light: #64B5F6;
    }

    .input-page-container {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
    }

    .input-header {
        background: linear-gradient(135deg, var(--blue-primary) 0%, var(--blue-dark) 100%);
        color: white;
        padding: 20px;
        border-radius: 10px 10px 0 0;
        margin: -20px -20px 20px -20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .input-header h2 {
        margin: 0;
        font-size: 24px;
        font-weight: 600;
    }

    .back-btn {
        background: rgba(255, 255, 255, 0.2);
        color: white;
        border: 2px solid white;
        padding: 8px 16px;
        border-radius: 8px;
        cursor: pointer;
        transition: all 0.3s;
        font-weight: 500;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

    .back-btn:hover {
        background: white;
        color: var(--blue-primary);
        transform: translateX(-3px);
    }

    .tab-container {
        display: flex;
        gap: 10px;
        margin-bottom: 20px;
    }

    .tab-btn {
        flex: 1;
        padding: 12px;
        border: none;
        background: #f5f5f5;
        cursor: pointer;
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.3s;
    }

    .tab-btn.active {
        background: var(--blue-primary);
        color: white;
    }

    .info-box {
        background: #E3F2FD;
        border-left: 4px solid var(--blue-primary);
        padding: 12px 15px;
        margin-bottom: 20px;
        border-radius: 4px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .info-box i {
        color: var(--blue-primary);
        font-size: 20px;
    }

    .transaction-type-section {
        margin-bottom: 20px;
        padding: 15px;
        background: #f9f9f9;
        border-radius: 8px;
    }

    .transaction-type-label {
        display: block;
        margin-bottom: 10px;
        font-weight: 600;
        color: #333;
    }

    .radio-group {
        display: flex;
        gap: 20px;
    }

    .radio-option {
        display: flex;
        align-items: center;
        gap: 8px;
        cursor: pointer;
    }

    .radio-option input[type="radio"] {
        width: 20px;
        height: 20px;
        cursor: pointer;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-label {
        display: block;
        margin-bottom: 8px;
        font-weight: 500;
        color: #333;
    }

    .input-wrapper {
        position: relative;
    }

    .form-input {
        width: 100%;
        padding: 12px 45px 12px 45px;
        border: 2px solid #ddd;
        border-radius: 8px;
        font-size: 16px;
        transition: all 0.3s;
    }

    .form-input:focus {
        outline: none;
        border-color: var(--blue-primary);
        box-shadow: 0 0 0 3px rgba(33, 150, 243, 0.1);
    }

    .input-icon {
        position: absolute;
        left: 15px;
        top: 50%;
        transform: translateY(-50%);
        color: #666;
    }

    .scan-btn {
        position: absolute;
        right: 10px;
        top: 50%;
        transform: translateY(-50%);
        background: var(--blue-primary);
        color: white;
        border: none;
        padding: 8px 12px;
        border-radius: 5px;
        cursor: pointer;
        transition: all 0.3s;
    }

    .scan-btn:hover {
        background: var(--blue-dark);
    }

    .date-input {
        padding-right: 15px;
    }

    /* HARD RESET for Enhanced Inputs to prevent default browser styles */
    .input-wrapper-enhanced input.form-input-enhanced {
        border: none !important;
        outline: none !important;
        box-shadow: none !important;
        background: transparent !important;
        height: 100% !important;
        width: 100% !important;
        flex: 1;
        padding: 0 15px;
        margin: 0;
        font-size: 16px;
        color: #333;
        -webkit-appearance: none;
        appearance: none;
    }

    .input-wrapper-enhanced input:focus {
        outline: none !important;
        border: none !important;
        box-shadow: none !important;
    }
    
    /* Ensure wrapper handles the border, not the input */
    .input-wrapper-enhanced {
        position: relative;
        display: flex;
        align-items: center;
        background: white;
        border: 2px solid #90CAF9;
        border-radius: 8px;
        height: 50px;
        overflow: visible; /* Penting untuk dropdown autocomplete */
        z-index: 10;
        transition: border-color 0.3s, box-shadow 0.3s;
    }
    
    .input-wrapper-enhanced:focus-within {
        border-color: #2196F3;
        box-shadow: 0 0 0 4px rgba(33, 150, 243, 0.2);
        z-index: 20; /* Lift up when focused */
    }

    .input-icon-left {
        width: 45px;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        border-right: 1px solid #f0f0f0; /* Separator halus */
    }
    
    .input-icon-left svg {
        width: 24px;
        height: 24px;
        fill: #1976D2; /* Biru After Washing */
        opacity: 0.7;
    }

    /* Fix Scan Button */
    .scan-btn-enhanced {
        width: 50px;
        height: 100%;
        border: none !important;
        background: linear-gradient(135deg, #42A5F5, #1976D2) !important;
        border-top-right-radius: 6px;
        border-bottom-right-radius: 6px;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: opacity 0.2s;
        margin: 0 !important; /* Reset margin */
        padding: 0 !important;
    }

    .scan-btn-enhanced:hover {
        opacity: 0.9;
    }
    
    .scan-btn-enhanced svg {
        fill: white !important;
        width: 24px;
        height: 24px;
    }

    /* Dropdown Fix */
    .autocomplete-dropdown {
        position: absolute;
        top: 100%; /* Pas di bawah wrapper */
        left: -2px; /* Kompensasi border wrapper */
        right: -2px;
        background: white;
        border: 2px solid #2196F3;
        border-top: none;
        border-radius: 0 0 8px 8px;
        box-shadow: 0 10px 20px rgba(0,0,0,0.15);
        z-index: 1000;
        margin-top: 0;
        max-height: 250px;
        overflow-y: auto;
        display: none;
    }

    .autocomplete-item {
        padding: 12px 15px;
        border-bottom: 1px solid #eee;
        cursor: pointer;
        font-size: 14px;
    }
    
    .autocomplete-item:hover, .autocomplete-item.active {
        background-color: #E3F2FD;
        color: #1565C0;
    }
    
    /* Ghost Input for Inline Autocomplete */
    .ghost-input {
        position: absolute;
        left: 45px; /* Matches Icon Width */
        top: 0;
        height: 100%;
        width: calc(100% - 95px); /* 100% - (Icon 45px + Btn 50px) */
        border: none !important;
        background: transparent !important;
        padding: 0 15px; /* Matches Input Padding */
        font-size: 16px; /* Matches Input Font */
        font-family: 'Inter', sans-serif;
        color: #BDBDBD; /* Grey Text */
        z-index: 5; /* Below main input */
        pointer-events: none; /* Let clicks pass through to main input */
        white-space: nowrap;
        overflow: hidden;
    }
    
    /* Ensure main input sits on top */
    .input-wrapper-enhanced input.form-input-enhanced {
        z-index: 10;
        position: relative;
    }

    /* Date Input Specific Fix */
    input[type="date"].form-input {
        appearance: none;
        -webkit-appearance: none;
        border: 2px solid #ddd;
        border-radius: 8px;
        padding: 10px 15px 10px 45px; /* Adjusted padding-left for icon */
        height: 50px;
        width: 100%;
        font-family: 'Inter', sans-serif;
    }
    
    input[type="date"].form-input:focus {
         border-color: #2196F3;
         outline: none;
    }
    
    .row-inputs {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 15px;
    }

    .submit-btn {
        width: 100%;
        padding: 15px;
        background: var(--blue-primary);
        color: white;
        border: none;
        border-radius: 8px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s;
        margin-top: 20px;
    }

    .submit-btn:hover {
        background: var(--blue-dark);
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(33, 150, 243, 0.3);
    }

    .planning-btn {
        position: fixed;
        bottom: 30px;
        right: 30px;
        width: 60px;
        height: 60px;
        background: var(--blue-primary);
        color: white;
        border: none;
        border-radius: 50%;
        font-size: 24px;
        cursor: pointer;
        box-shadow: 0 4px 12px rgba(33, 150, 243, 0.4);
        transition: all 0.3s;
        z-index: 1000;
    }

    .planning-btn:hover {
        background: var(--blue-dark);
        transform: scale(1.1);
    }

    #qr-reader {
        border: 2px solid var(--blue-primary);
        border-radius: 8px;
        overflow: hidden;
    }

    .modal {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0,0,0,0.7);
        z-index: 9999;
        align-items: center;
        justify-content: center;
    }

    .modal.active {
        display: flex;
    }

    .modal-content {
        background: white;
        padding: 20px;
        border-radius: 10px;
        max-width: 500px;
        width: 90%;
    }

    .modal-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 15px;
    }

    .close-modal {
        background: #f44336;
        color: white;
        border: none;
        padding: 8px 15px;
        border-radius: 5px;
        cursor: pointer;
    }
    .history-btn {
        background: none;
        border: none;
        color: var(--blue-primary);
        cursor: pointer;
        padding: 8px;
        border-radius: 50%;
        transition: transform 0.2s, background-color 0.2s;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-left: 10px;
    }
    .history-btn:hover {
        background-color: rgba(33, 150, 243, 0.1);
        transform: scale(1.1);
    }
</style>
