    <script>
        let html5QrcodeScanner = null;
        let currentScanField = null;
        let currentTab = 'in';

        // Tab switching
        document.querySelectorAll('.tab-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                const tab = this.dataset.tab;
                switchTab(tab);
            });
        });

        function switchTab(tab) {
            currentTab = tab;
            document.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('active'));
            document.querySelector(`[data-tab="${tab}"]`).classList.add('active');
            
            // Clear form when switching tabs
            document.getElementById('itemCode').value = '';
            document.getElementById('fullQR').value = '';
            document.getElementById('boxCount').value = '';
            
            // Set production date to today
            const today = new Date().toISOString().split('T')[0];
            if (document.getElementById('productionDate')) {
                document.getElementById('productionDate').value = today;
            }
            
            if (tab === 'in') {
                document.getElementById('info-text').textContent = 'Catat material yang masuk ke Rak After Washing';
                document.querySelector('.submit-btn').innerHTML = '<i class="gi gi-floppy_disk"></i> SUBMIT INPUT IN';
                document.getElementById('transaction-type-section').style.display = 'block';
                document.getElementById('production-date-group').style.display = 'block';
            } else {
                document.getElementById('info-text').textContent = 'Catat material keluar ke Finishing';
                document.querySelector('.submit-btn').innerHTML = '<i class="gi gi-floppy_disk"></i> SUBMIT INPUT OUT';
                document.getElementById('transaction-type-section').style.display = 'none';
                document.getElementById('production-date-group').style.display = 'none';
            }
        }

        // Transaction type radio buttons
        document.querySelectorAll('input[name="transactionType"]').forEach(radio => {
            radio.addEventListener('change', function() {
                document.getElementById('transactionTypeValue').value = this.value;
            });
        });

        // QR Scanner
        function openScanner(fieldId) {
            currentScanField = fieldId;
            document.getElementById('scannerModal').classList.add('active');
            
            html5QrcodeScanner = new Html5Qrcode("qr-reader");
            html5QrcodeScanner.start(
                { facingMode: "environment" },
                { fps: 10, qrbox: 250 },
                onScanSuccess,
                onScanError
            );
        }

        function closeScanner() {
            if (html5QrcodeScanner) {
                html5QrcodeScanner.stop().then(() => {
                    document.getElementById('scannerModal').classList.remove('active');
                    html5QrcodeScanner = null;
                });
            }
        }

        function onScanSuccess(decodedText) {
            document.getElementById(currentScanField).value = decodedText;
            closeScanner();
            
            // Auto-fill item code if scanning Full QR
            if (currentScanField === 'fullQR') {
                autoFillFromQR(decodedText);
            }
        }

        function onScanError(error) {
            // Ignore scan errors (too noisy)
        }

        // Auto-fill from QR code
        function autoFillFromQR(qrCode) {
            // Try to extract item code from QR
            const parts = qrCode.split('-');
            if (parts.length > 0 && !document.getElementById('itemCode').value) {
                document.getElementById('itemCode').value = parts[0];
            }
        }


        // Form submission
        document.getElementById('inputForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const data = {
                transactionType: currentTab === 'in' ? document.getElementById('transactionTypeValue').value : 'OUT',
                itemCode: document.getElementById('itemCode').value,
                fullQR: document.getElementById('fullQR').value,
                productionDate: document.getElementById('productionDate').value || null,
                boxCount: parseInt(document.getElementById('boxCount').value) || 0,
                qtyPcs: parseInt(document.getElementById('qtyPcs').value) || 0
            };

            try {
                const response = await fetch('/AfterWashing/SubmitAfterWashingInput', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });

                const result = await response.json();
                
                if (result.success) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Success!',
                        text: result.message,
                        confirmButtonColor: '#2196F3'
                    });
                    this.reset();
                    // Reset transaction type to IN
                    document.querySelector('input[name="transactionType"][value="IN"]').checked = true;
                    document.getElementById('transactionTypeValue').value = 'IN';
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: result.message
                    });
                }
            } catch (error) {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'Failed to submit data: ' + error.message
                });
            }
        });


        // Initialize Autocomplete
        $(document).ready(function() {
            setupAutocomplete('itemCode', '@Url.Action("GetItemCodes", "AfterWashing")');
            setupAutocomplete('fullQR', '@Url.Action("GetFullQRCodes", "AfterWashing")');
        });

        function setupAutocomplete(inputId, url) {
            const $input = $('#' + inputId);
            const $dropdown = $('#' + inputId + '-dropdown');
            
            // Create Ghost Input dynamically if not exists
            let $ghost = $input.siblings('.ghost-input');
            if ($ghost.length === 0) {
                $ghost = $('<input type="text" class="ghost-input" readonly tabindex="-1">');
                $input.before($ghost);
            }

            let debounceTimer;

            $input.on('input', function() {
                const query = $(this).val();
                $ghost.val(''); // Clear ghost on typing
                clearTimeout(debounceTimer);

                if (query.length < 1) {
                    $dropdown.removeClass('show').html('');
                    return;
                }

                debounceTimer = setTimeout(() => {
                    fetchData(query);
                }, 300);
            });

            // Show dropdown when input is focused or clicked
            $input.on('focus click', function() {
                fetchData($(this).val());
            });

            // Handle Key Navigation & Ghost Text
            $input.on('keydown', function(e) {
                const $items = $dropdown.find('.autocomplete-item');
                const $active = $dropdown.find('.autocomplete-item.active');
                const ghostVal = $ghost.val();

                // TAB or Right Arrow to accept Ghost Text
                if ((e.key === 'Tab' || e.key === 'ArrowRight') && ghostVal) {
                    // Only accept if we have ghost text and cursor is at end (for arrow right) or it's Tab
                    // Simplifying: Always accept if ghost text is visible and matches prefix
                    if ($input.val().toLowerCase() !== ghostVal.toLowerCase()) {
                         e.preventDefault();
                         $input.val(ghostVal);
                         $ghost.val('');
                         $dropdown.removeClass('show');
                         return;
                    }
                }
                
                if (e.key === 'ArrowDown') {
                    // e.preventDefault(); // Don't prevent default to allow scrolling if needed, but here we navigate items
                    if ($items.length > 0) e.preventDefault();
                    
                    if ($active.length === 0) {
                        $items.first().addClass('active');
                    } else {
                        $active.removeClass('active').next().addClass('active');
                    }
                } else if (e.key === 'ArrowUp') {
                     if ($items.length > 0) e.preventDefault();
                    if ($active.length === 0) {
                        $items.last().addClass('active');
                    } else {
                        $active.removeClass('active').prev().addClass('active');
                    }
                } else if (e.key === 'Enter') {
                    if ($active.length > 0) {
                        e.preventDefault();
                        $active.click();
                    } else if (ghostVal) {
                        // Enter also accepts ghost text if no item selected?
                        // Optional, let's keep Enter for Submit unless item selected
                    }
                } else if (e.key === 'Escape') {
                    $dropdown.removeClass('show');
                    $ghost.val('');
                }
            });

            // Close dropdown when clicking outside
            $(document).on('click', function(e) {
                if (!$(e.target).closest('.input-wrapper-enhanced').length) {
                    $dropdown.removeClass('show');
                    $ghost.val('');
                }
            });

            function fetchData(query) {
                $dropdown.addClass('show').html('<div class="autocomplete-loading">Loading...</div>');

                $.ajax({
                    url: url,
                    data: { search: query },
                    success: function(response) {
                        renderDropdown(response.results, query);
                    },
                    error: function() {
                        //$dropdown.html('<div class="autocomplete-no-results">Error loading data</div>');
                         $dropdown.html('');
                    }
                });
            }

            function renderDropdown(items, query) {
                if (!items || items.length === 0) {
                    $dropdown.html('<div class="autocomplete-no-results">No matches found</div>');
                    $ghost.val('');
                    return;
                }

                // Ghost Text Logic
                if (query && items.length > 0) {
                    const topMatch = items[0].text;
                    if (topMatch.toLowerCase().startsWith(query.toLowerCase())) {
                        $ghost.val(topMatch);
                    } else {
                        $ghost.val('');
                    }
                } else {
                    $ghost.val('');
                }

                let html = '';
                items.forEach(item => {
                    html += `<div class="autocomplete-item" data-value="${item.id}">${item.text}</div>`;
                });

                $dropdown.html(html);

                $dropdown.find('.autocomplete-item').on('click', function() {
                    const value = $(this).data('value');
                    $input.val(value);
                    $ghost.val(''); // Clear ghost
                    $dropdown.removeClass('show');
                });
            }
        }

        // Override scanner function
        window.originalOpenScanner = openScanner;
        window.openScanner = function(fieldId) {
            window.currentSelectField = fieldId;
            originalOpenScanner(fieldId);
        };

        // Update onScanSuccess
        const originalOnScanSuccess = onScanSuccess;
        window.onScanSuccess = function(decodedText, decodedResult) {
            if (window.currentSelectField) {
                const $input = $('#' + window.currentSelectField);
                $input.val(decodedText);
            }
            closeScanner();
        };

        // Set default date to today (Safe init)
        try {
            document.getElementById('productionDate').valueAsDate = new Date();
        } catch (e) {
            console.error("Date init error:", e);
        }
    </script>
