<style>
    body { font-family: 'Inter', sans-serif; background-color: #f8f9fa !important; color: #333 !important; margin: 0; padding: 20px; padding-top: 90px; }
    
    /* Teal Theme Colors for BTR */
    :root {
        --theme-primary: #00897b; /* Teal 600 */
        --theme-dark: #004d40;     /* Teal 900 */
        --theme-light: #b2dfdb;    /* Teal 100 */
        --theme-bg: #e0f2f1;       /* Teal 50 */
    }

    .input-page-container {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
    }

    .input-header {
        background: linear-gradient(135deg, var(--theme-primary) 0%, var(--theme-dark) 100%);
        color: white;
        padding: 20px;
        border-radius: 10px 10px 0 0;
        margin: -20px -20px 20px -20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .input-header h2 {
        margin: 0;
        font-size: 24px;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .back-btn {
        background: rgba(255, 255, 255, 0.2);
        color: white;
        border: 2px solid white;
        padding: 8px 16px;
        border-radius: 8px;
        cursor: pointer;
        transition: all 0.3s;
        font-weight: 500;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

    .back-btn:hover {
        background: white;
        color: var(--theme-primary);
        transform: translateX(-3px);
    }

    .tab-container {
        display: flex;
        gap: 10px;
        margin-bottom: 20px;
    }

    .tab-btn {
        flex: 1;
        padding: 12px;
        border: none;
        background: #f5f5f5;
        cursor: pointer;
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.3s;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
    }

    .tab-btn.active {
        background: var(--theme-primary);
        color: white;
    }

    .info-box {
        background: var(--theme-bg);
        border-left: 4px solid var(--theme-primary);
        padding: 12px 15px;
        margin-bottom: 20px;
        border-radius: 4px;
        display: flex;
        align-items: center;
        gap: 10px;
        color: #00695c;
    }

    .info-box i {
        color: var(--theme-primary);
        font-size: 20px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-label {
        display: block;
        margin-bottom: 8px;
        font-weight: 500;
        color: #333;
    }

    .input-wrapper {
        position: relative;
    }

    .form-input {
        width: 100%;
        padding: 12px 45px 12px 45px;
        border: 2px solid #ddd;
        border-radius: 8px;
        font-size: 16px;
        transition: all 0.3s;
    }

    .form-input:focus {
        outline: none;
        border-color: var(--theme-primary);
        box-shadow: 0 0 0 3px rgba(0, 137, 123, 0.1);
    }

    .input-icon {
        position: absolute;
        left: 15px;
        top: 50%;
        transform: translateY(-50%);
        color: #666;
    }

    /* Enhanced Input Styles */
    .input-wrapper-enhanced {
        position: relative;
        display: flex;
        align-items: center;
        background: white;
        border: 2px solid #b2dfdb;
        border-radius: 8px;
        height: 50px;
        overflow: visible;
        z-index: 10;
        transition: border-color 0.3s, box-shadow 0.3s;
    }
    
    .input-wrapper-enhanced:focus-within {
        border-color: var(--theme-primary);
        box-shadow: 0 0 0 4px rgba(0, 137, 123, 0.2);
        z-index: 20;
    }

    .input-icon-left {
        width: 45px;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        border-right: 1px solid #f0f0f0;
    }
    
    .input-icon-left svg {
        width: 24px;
        height: 24px;
        fill: var(--theme-primary);
        opacity: 0.7;
    }

    .input-wrapper-enhanced input.form-input-enhanced {
        border: none !important;
        outline: none !important;
        box-shadow: none !important;
        background: transparent !important;
        height: 100% !important;
        width: 100% !important;
        flex: 1;
        padding: 0 15px;
        margin: 0;
        font-size: 16px;
        color: #333;
        -webkit-appearance: none;
        appearance: none;
        z-index: 10;
        position: relative;
    }

    .scan-btn-enhanced {
        width: 50px;
        height: 100%;
        border: none !important;
        background: linear-gradient(135deg, #b2dfdb, var(--theme-primary)) !important;
        border-top-right-radius: 6px;
        border-bottom-right-radius: 6px;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: opacity 0.2s;
        margin: 0 !important;
        padding: 0 !important;
    }
    
    .scan-btn-enhanced:hover {
        opacity: 0.9;
    }
    
    .scan-btn-enhanced svg {
        fill: white !important;
        width: 24px;
        height: 24px;
    }

    /* Autocomplete */
    .autocomplete-dropdown {
        position: absolute;
        top: 100%;
        left: -2px;
        right: -2px;
        background: white;
        border: 2px solid var(--theme-primary);
        border-top: none;
        border-radius: 0 0 8px 8px;
        box-shadow: 0 10px 20px rgba(0,0,0,0.15);
        z-index: 1000;
        margin-top: 0;
        max-height: 250px;
        overflow-y: auto;
        display: none;
    }

    .autocomplete-item {
        padding: 12px 15px;
        border-bottom: 1px solid #eee;
        cursor: pointer;
        font-size: 14px;
    }
    
    .autocomplete-item:hover, .autocomplete-item.selected {
        background-color: var(--theme-light);
        color: var(--theme-dark);
    }
    
    .ghost-input {
        position: absolute;
        left: 45px;
        top: 0;
        height: 100%;
        width: calc(100% - 95px);
        border: none !important;
        background: transparent !important;
        padding: 0 15px;
        font-size: 16px;
        font-family: 'Inter', sans-serif;
        color: #BDBDBD;
        z-index: 5;
        pointer-events: none;
        white-space: nowrap;
        overflow: hidden;
    }

    /* Date Input */
    input[type="date"].form-input {
        appearance: none;
        -webkit-appearance: none;
        border: 2px solid #ddd;
        border-radius: 8px;
        padding: 10px 15px 10px 45px;
        height: 50px;
        width: 100%;
        font-family: 'Inter', sans-serif;
    }
    
    input[type="date"].form-input:focus {
         border-color: var(--theme-primary);
         outline: none;
    }

    .row-inputs {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 15px;
    }

    .submit-btn {
        width: 100%;
        padding: 15px;
        background: var(--theme-primary);
        color: white;
        border: none;
        border-radius: 8px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s;
        margin-top: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
    }

    .submit-btn:hover {
        background: var(--theme-dark);
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(0, 137, 123, 0.3);
    }

    /* Priority/FIFO Section */
    .fifo-section {
        background: #e0f2f1;
        border: 2px solid #80cbc4;
        border-radius: 8px;
        padding: 15px;
        margin-bottom: 20px;
    }

    .fifo-header {
        display: flex;
        align-items: center;
        gap: 10px;
        margin-bottom: 10px;
        color: var(--theme-dark);
    }

    .fifo-list {
        max-height: 200px;
        overflow-y: auto;
    }

    .fifo-item {
        background: white;
        padding: 10px;
        margin-bottom: 8px;
        border-radius: 5px;
        cursor: pointer;
        transition: all 0.2s;
        border-left: 3px solid var(--theme-primary);
    }

    .fifo-item:hover {
        background: #b2dfdb;
        transform: translateX(5px);
    }

    /* Modal & Others */
    .modal { display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.7); z-index: 9999; align-items: center; justify-content: center; }
    .modal.active { display: flex; }
    .modal-content { background: white; padding: 20px; border-radius: 10px; max-width: 500px; width: 90%; }
    .modal-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 15px; }
    .close-modal { background: #f44336; color: white; border: none; padding: 8px 15px; border-radius: 5px; cursor: pointer; }
    .history-btn { background: none; border: none; color: white; cursor: pointer; padding: 5px; border-radius: 50%; opacity: 0.8; transition: all 0.2s; }
    .history-btn:hover { background-color: rgba(255,255,255,0.2); opacity: 1; transform: scale(1.1); }
    #qr-reader { border: 2px solid var(--theme-primary); border-radius: 8px; overflow: hidden; }

    /* Show class for autocomplete */
    .autocomplete-dropdown.show { display: block; }
</style>
