<script>
    let html5QrcodeScanner = null;
    let currentScanField = null;
    let currentTab = 'in';

    // Set default date
    document.getElementById('productionDate').valueAsDate = new Date();

    // Tab switching
    document.querySelectorAll('.tab-btn').forEach(btn => {
        btn.addEventListener('click', function() {
            const tab = this.dataset.tab;
            switchTab(tab);
        });
    });

    function switchTab(tab) {
        currentTab = tab;
        document.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('active'));
        document.querySelector(`[data-tab="${tab}"]`).classList.add('active');
        
        document.getElementById('transactionType').value = tab.toUpperCase();
        
        // Reset form cleanly
        document.getElementById('itemCode').value = '';
        document.getElementById('fullQR').value = '';
        document.getElementById('boxCount').value = '';
        document.getElementById('qtyPcs').value = '';
        document.getElementById('productionDate').valueAsDate = new Date();
        
        if (tab === 'in') {
            document.getElementById('info-text').textContent = 'Catat material masuk ke Storage BTR';
            document.querySelector('.submit-btn').innerHTML = '<i class="gi gi-floppy_disk"></i> SUBMIT INPUT IN';
            document.getElementById('fifo-section').style.display = 'none';
        } else {
            document.getElementById('info-text').textContent = 'Catat material keluar (Supply)';
            document.querySelector('.submit-btn').innerHTML = '<i class="gi gi-floppy_disk"></i> SUBMIT INPUT OUT';
            document.getElementById('fifo-section').style.display = 'block';
            refreshFIFO();
        }
    }

    // Autocomplete Initialization
    $(document).ready(function() {
        setupAutocomplete('itemCode', '@Url.Action("GetItemCodes", "BTR")');
        setupAutocomplete('fullQR', '@Url.Action("GetFullQRCodes", "BTR")');
    });

    function setupAutocomplete(inputId, url) {
        const $input = $('#' + inputId);
        const $dropdown = $('#' + inputId + '-dropdown');
        let $ghost = $input.siblings('.ghost-input');
        if ($ghost.length === 0) {
            $ghost = $('<input type="text" class="ghost-input" readonly tabindex="-1">');
            $input.before($ghost);
        }

        let debounceTimer;

        $input.on('input', function() {
            const query = $(this).val();
            $ghost.val('');
            clearTimeout(debounceTimer);
            
            // Show dropdown even with empty query for better UX
            debounceTimer = setTimeout(() => fetchData(query), 300);
        });

        // Show dropdown when focused
        $input.on('focus', function() {
            const query = $(this).val();
            fetchData(query);
        });

        $input.on('keydown', function(e) {
             const ghostVal = $ghost.val();
             if ((e.key === 'Tab' || e.key === 'ArrowRight') && ghostVal && $input.val().toLowerCase() !== ghostVal.toLowerCase()) {
                 e.preventDefault();
                 $input.val(ghostVal);
                 $ghost.val('');
                 $dropdown.removeClass('show');
             }
        });

        // Hide dropdown on blur/click outside
        $(document).on('click', function(e) {
            if (!$(e.target).closest('.input-wrapper-enhanced').length) {
                $dropdown.removeClass('show');
                $ghost.val('');
            }
        });

        function fetchData(query) {
            $dropdown.html('<div style="padding:12px; text-align:center; color:#999;">Loading...</div>').addClass('show');
            
            $.ajax({
                url: url,
                data: { search: query },
                success: function(response) {
                    console.log('Autocomplete response:', response); // Debug
                    if(response.success && response.results) {
                        renderDropdown(response.results, query);
                    } else {
                        $dropdown.html('<div style="padding:12px; text-align:center; color:#999;">No data available</div>');
                    }
                },
                error: function(xhr, status, error) {
                    console.error('Autocomplete error:', error);
                    $dropdown.html('<div style="padding:12px; text-align:center; color:#f44336;">Error loading data</div>');
                }
            });
        }

        function renderDropdown(items, query) {
            if (!items.length) { 
                $dropdown.html('<div style="padding:12px; text-align:center; color:#999;">No matches found</div>').addClass('show');
                $ghost.val('');
                return; 
            }
            
            // Ghost suggestion
            if (query && items[0].text.toLowerCase().startsWith(query.toLowerCase())) {
                $ghost.val(items[0].text);
            } else {
                $ghost.val('');
            }

            let html = '';
            items.forEach(item => {
                html += `<div class="autocomplete-item" data-value="${item.id}">${item.text}</div>`;
            });
            $dropdown.html(html).addClass('show');

            $dropdown.find('.autocomplete-item').on('click', function() {
                $input.val($(this).data('value'));
                $ghost.val('');
                $dropdown.removeClass('show');
            });
        }
    }

    // FIFO Logic
    async function refreshFIFO() {
        try {
            const response = await fetch('@Url.Action("GetBTRStockForFIFO", "BTR")');
            const result = await response.json();
            
            const listEl = document.getElementById('fifo-list');
            if (result.success && result.data && result.data.length > 0) {
                let html = '';
                const search = document.getElementById('fifo-search').value.toLowerCase();
                const items = result.data.filter(i => 
                    !search || i.itemCode.toLowerCase().includes(search) || (i.fullQR && i.fullQR.toLowerCase().includes(search))
                );

                if(items.length === 0) listEl.innerHTML = '<p class="text-center">No match found.</p>';
                else {
                    items.forEach(item => {
                        html += `
                            <div class="fifo-item" onclick="selectFIFO('${item.itemCode}', '${item.fullQR || ''}', '${item.productionDate}', ${item.boxCount})">
                                <strong>${item.itemCode}</strong><br>
                                <small>QR: ${item.fullQR || '-'} | Stock: ${item.boxCount} Box</small>
                            </div>
                        `;
                    });
                    listEl.innerHTML = html;
                }
            } else {
                listEl.innerHTML = '<p class="text-center text-muted">No stock available.</p>';
            }
        } catch(e) { console.error(e); }
    }

    document.getElementById('fifo-search').addEventListener('input', refreshFIFO);

    function selectFIFO(itemCode, fullQR, prodDate, boxCount) {
        if(currentTab !== 'out') {
            Swal.fire('Info', 'Switch to OUT tab to use FIFO recommendation', 'info');
            return;
        }
        document.getElementById('itemCode').value = itemCode;
        document.getElementById('fullQR').value = fullQR;
        document.getElementById('boxCount').value = boxCount; // Suggested max
        if(prodDate) document.getElementById('productionDate').value = prodDate;
    }

    // FORM SUBMIT
    document.getElementById('inputForm').addEventListener('submit', async function(e) {
        e.preventDefault();
        
        // Prepare JSON payload
        const payload = {
            TransactionType: document.getElementById('transactionType').value,
            ItemCode: document.getElementById('itemCode').value,
            FullQR: document.getElementById('fullQR').value,
            ProductionDate: document.getElementById('productionDate').value,
            BoxCount: parseFloat(document.getElementById('boxCount').value || 0),
            QtyPcs: parseFloat(document.getElementById('qtyPcs').value || 0),
            // Optional fields logic handled by controller
        };
        
        // Disable button
        const btn = this.querySelector('.submit-btn');
        const oldHtml = btn.innerHTML;
        btn.innerHTML = '<i class="gi gi-refresh"></i> Processing...';
        btn.disabled = true;

        try {
            const response = await fetch('@Url.Action("SubmitBTRInput", "BTR")', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(payload)
            });
            
            const result = await response.json();
            
            if (result.success) {
                Swal.fire('Success', result.message, 'success');
                // Reset form
                document.getElementById('itemCode').value = '';
                document.getElementById('fullQR').value = '';
                document.getElementById('boxCount').value = '';
                document.getElementById('qtyPcs').value = '';
                
                if(currentTab === 'out') refreshFIFO();
            } else {
                Swal.fire('Error', result.message, 'error');
            }
        } catch (error) {
            Swal.fire('Error', 'Network error or server failed.', 'error');
        } finally {
            btn.innerHTML = oldHtml;
            btn.disabled = false;
        }
    });

    // Scanner
    function openScanner(fieldId) {
        currentScanField = fieldId;
        document.getElementById('scannerModal').classList.add('active');
        html5QrcodeScanner = new Html5Qrcode("qr-reader");
        html5QrcodeScanner.start({ facingMode: "environment" }, { fps: 10, qrbox: 250 }, onScanSuccess);
    }

    function closeScanner() {
        if (html5QrcodeScanner) {
            html5QrcodeScanner.stop().then(() => {
                document.getElementById('scannerModal').classList.remove('active');
                html5QrcodeScanner = null;
            });
        } else {
             document.getElementById('scannerModal').classList.remove('active');
        }
    }

    function onScanSuccess(decodedText) {
        if(currentScanField) {
            document.getElementById(currentScanField).value = decodedText;
            
            // Auto parse if Full QR contains data (simple split check)
            if(currentScanField === 'fullQR') {
                const parts = decodedText.split(/[- ]/);
                if(parts.length > 0 && !document.getElementById('itemCode').value) {
                    document.getElementById('itemCode').value = parts[0];
                }
            }
        }
        closeScanner();
    }

    function showHistory() {
        window.location.href = '@Url.Action("History", "BTR")';
    }
</script>
