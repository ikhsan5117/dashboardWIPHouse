<style>
    body { font-family: 'Inter', sans-serif; background-color: #f8f9fa !important; color: #333 !important; margin: 0; padding: 20px; padding-top: 90px; }
    /* Purple Theme Colors for MOLDED */
    :root {
        --theme-primary: #667eea;
        --theme-dark: #764ba2;
        --theme-light: #a3bffa;
        --theme-bg: #f0f2ff;
    }

    .input-page-container {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
    }

    .input-header {
        background: linear-gradient(135deg, var(--theme-primary) 0%, var(--theme-dark) 100%);
        color: white;
        padding: 20px;
        border-radius: 10px 10px 0 0;
        margin: -20px -20px 20px -20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .input-header h2 {
        margin: 0;
        font-size: 24px;
        font-weight: 600;
    }

    .back-btn {
        background: rgba(255, 255, 255, 0.2);
        color: white;
        border: 2px solid white;
        padding: 8px 16px;
        border-radius: 8px;
        cursor: pointer;
        transition: all 0.3s;
        font-weight: 500;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

    .back-btn:hover {
        background: white;
        color: var(--theme-primary);
        transform: translateX(-3px);
    }

    .tab-container {
        display: flex;
        gap: 10px;
        margin-bottom: 20px;
    }

    .tab-btn {
        flex: 1;
        padding: 12px;
        border: none;
        background: #f5f5f5;
        cursor: pointer;
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.3s;
    }

    .tab-btn.active {
        background: var(--theme-primary);
        color: white;
    }

    .info-box {
        background: var(--theme-bg);
        border-left: 4px solid var(--theme-primary);
        padding: 12px 15px;
        margin-bottom: 20px;
        border-radius: 4px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .info-box i {
        color: var(--theme-primary);
        font-size: 20px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-label {
        display: block;
        margin-bottom: 8px;
        font-weight: 500;
        color: #333;
    }

    .input-wrapper {
        position: relative;
    }

    .form-input {
        width: 100%;
        padding: 12px 45px 12px 45px;
        border: 2px solid #ddd;
        border-radius: 8px;
        font-size: 16px;
        transition: all 0.3s;
    }

    .form-input:focus {
        outline: none;
        border-color: var(--theme-primary);
        box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
    }

    .input-icon {
        position: absolute;
        left: 15px;
        top: 50%;
        transform: translateY(-50%);
        color: #666;
    }

    /* HARD RESET for Enhanced Inputs to prevent default browser styles */
    .input-wrapper-enhanced input.form-input-enhanced {
        border: none !important;
        outline: none !important;
        box-shadow: none !important;
        background: transparent !important;
        height: 100% !important;
        width: 100% !important;
        flex: 1;
        padding: 0 15px;
        margin: 0;
        font-size: 16px;
        color: #333;
        -webkit-appearance: none;
        appearance: none;
    }

    .input-wrapper-enhanced input:focus {
        outline: none !important;
        border: none !important;
        box-shadow: none !important;
    }
    
    /* Ensure wrapper handles the border, not the input */
    .input-wrapper-enhanced {
        position: relative;
        display: flex;
        align-items: center;
        background: white;
        border: 2px solid #C5CAE9;
        border-radius: 8px;
        height: 50px;
        overflow: visible;
        z-index: 10;
        transition: border-color 0.3s, box-shadow 0.3s;
    }
    
    .input-wrapper-enhanced:focus-within {
        border-color: #667eea;
        box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.2);
        z-index: 20;
    }

    .input-icon-left {
        width: 45px;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        border-right: 1px solid #f0f0f0;
    }
    
    .input-icon-left svg {
        width: 24px;
        height: 24px;
        fill: #5C6BC0; /* Indigo 400 */
        opacity: 0.7;
    }

    /* Fix Scan Button */
    .scan-btn-enhanced {
        width: 50px;
        height: 100%;
        border: none !important;
        background: linear-gradient(135deg, #C5CAE9, #667eea) !important;
        border-top-right-radius: 6px;
        border-bottom-right-radius: 6px;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: opacity 0.2s;
        margin: 0 !important;
        padding: 0 !important;
    }

    .scan-btn-enhanced:hover {
        opacity: 0.9;
    }
    
    .scan-btn-enhanced svg {
        fill: white !important;
        width: 24px;
        height: 24px;
    }

    /* Dropdown Fix */
    .autocomplete-dropdown {
        position: absolute;
        top: 100%;
        left: -2px;
        right: -2px;
        background: white;
        border: 2px solid #667eea;
        border-top: none;
        border-radius: 0 0 8px 8px;
        box-shadow: 0 10px 20px rgba(0,0,0,0.15);
        z-index: 1000;
        margin-top: 0;
