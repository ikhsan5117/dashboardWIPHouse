        overflow-y: auto;
        display: none;
    }

    .autocomplete-item {
        padding: 12px 15px;
        border-bottom: 1px solid #eee;
        cursor: pointer;
        font-size: 14px;
    }
    
    .autocomplete-item:hover, .autocomplete-item.selected {
        background-color: #EDE7F6;
        color: #512DA8;
    }
    
    /* Ghost Input for Inline Autocomplete */
    .ghost-input {
        position: absolute;
        left: 45px; /* Matches Icon Width */
        top: 0;
        height: 100%;
        width: calc(100% - 95px); /* 100% - (Icon 45px + Btn 50px) */
        border: none !important;
        background: transparent !important;
        padding: 0 15px; /* Matches Input Padding */
        font-size: 16px; /* Matches Input Font */
        font-family: 'Inter', sans-serif;
        color: #BDBDBD; /* Grey Text (Ghost) */
        z-index: 5; /* Below main input */
        pointer-events: none; /* Let clicks pass through */
        white-space: nowrap;
        overflow: hidden;
    }
    
    .input-wrapper-enhanced input.form-input-enhanced {
        z-index: 10;
        position: relative;
    }

    /* Date Input Specific Fix */
    input[type="date"].form-input {
        appearance: none;
        -webkit-appearance: none;
        border: 2px solid #ddd;
        border-radius: 8px;
        padding: 10px 15px 10px 45px; /* Adjusted padding-left for icon */
        height: 50px;
        width: 100%;
        font-family: 'Inter', sans-serif;
    }
    
    input[type="date"].form-input:focus {
