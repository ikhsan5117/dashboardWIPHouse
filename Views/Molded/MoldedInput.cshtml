    <script>
        let html5QrcodeScanner = null;
        let currentScanField = null;
        let currentTab = 'in';

        // Tab switching
        document.querySelectorAll('.tab-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                const tab = this.dataset.tab;
                switchTab(tab);
            });
        });

        function switchTab(tab) {
            currentTab = tab;
            document.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('active'));
            document.querySelector(`[data-tab="${tab}"]`).classList.add('active');
            
            document.getElementById('transactionType').value = tab.toUpperCase();
            
            // Clear form when switching tabs to prevent data contamination
            document.getElementById('itemCode').value = '';
            document.getElementById('fullQR').value = '';
            document.getElementById('boxCount').value = '';
            
            // Set production date to today
            const today = new Date().toISOString().split('T')[0];
            document.getElementById('productionDate').value = today;
            
            if (tab === 'in') {
                document.getElementById('info-text').textContent = 'Catat material masuk Molded storage';
                document.querySelector('.submit-btn').innerHTML = '<i class="gi gi-floppy_disk"></i> SUBMIT INPUT IN';
                document.getElementById('fifo-section').style.display = 'none';
            } else {
                document.getElementById('info-text').textContent = 'Catat material keluar untuk supply';
                document.querySelector('.submit-btn').innerHTML = '<i class="gi gi-floppy_disk"></i> SUBMIT INPUT OUT';
                document.getElementById('fifo-section').style.display = 'block';
                refreshFIFO();
            }
        }

        // Initialize Autocomplete
        $(document).ready(function() {
            setupAutocomplete('itemCode', '@Url.Action("GetItemCodes", "Molded")');
            setupAutocomplete('fullQR', '@Url.Action("GetFullQRCodes", "Molded")');
        });

        function setupAutocomplete(inputId, url) {
            const $input = $('#' + inputId);
            const $dropdown = $('#' + inputId + '-dropdown');
            
            // Create Ghost Input dynamically if not exists
            let $ghost = $input.siblings('.ghost-input');
            if ($ghost.length === 0) {
                $ghost = $('<input type="text" class="ghost-input" readonly tabindex="-1">');
                $input.before($ghost);
            }

            let debounceTimer;

            $input.on('input', function() {
                const query = $(this).val();
                $ghost.val(''); // Clear ghost on typing
                clearTimeout(debounceTimer);

                if (query.length < 1) {
                    $dropdown.removeClass('show').html('');
                    return;
                }

                debounceTimer = setTimeout(() => {
                    fetchData(query);
                }, 300);
            });

            // Show dropdown when input is focused or clicked
            $input.on('focus click', function() {
                fetchData($(this).val());
            });

            // Handle Key Navigation & Ghost Text
            $input.on('keydown', function(e) {
                const $items = $dropdown.find('.autocomplete-item');
                const $active = $dropdown.find('.autocomplete-item.active');
                const ghostVal = $ghost.val();

                // TAB or Right Arrow to accept Ghost Text
                if ((e.key === 'Tab' || e.key === 'ArrowRight') && ghostVal) {
                    if ($input.val().toLowerCase() !== ghostVal.toLowerCase()) {
                         e.preventDefault();
                         $input.val(ghostVal);
                         $ghost.val('');
                         $dropdown.removeClass('show');
                         return;
                    }
                }
                
                if (e.key === 'ArrowDown') {
                    if ($items.length > 0) e.preventDefault();
                    if ($active.length === 0) {
                        $items.first().addClass('active');
                    } else {
                        $active.removeClass('active').next().addClass('active');
                    }
                } else if (e.key === 'ArrowUp') {
                     if ($items.length > 0) e.preventDefault();
                    if ($active.length === 0) {
                        $items.last().addClass('active');
                    } else {
                        $active.removeClass('active').prev().addClass('active');
                    }
                } else if (e.key === 'Enter') {
                    if ($active.length > 0) {
                        e.preventDefault();
                        $active.click();
                    }
                } else if (e.key === 'Escape') {
                    $dropdown.removeClass('show');
                    $ghost.val('');
                }
            });

            // Close dropdown when clicking outside
            $(document).on('click', function(e) {
                if (!$(e.target).closest('.input-wrapper-enhanced').length) {
                    $dropdown.removeClass('show');
                    $ghost.val('');
                }
            });

            function fetchData(query) {
                $dropdown.addClass('show').html('<div class="autocomplete-loading">Loading...</div>');

                $.ajax({
                    url: url,
                    data: { search: query },
                    success: function(response) {
                        renderDropdown(response.results, query);
                    },
                    error: function() {
                        //$dropdown.html('<div class="autocomplete-no-results">Error loading data</div>');
                         $dropdown.html('');
                    }
                });
            }

            function renderDropdown(items, query) {
                if (!items || items.length === 0) {
                    $dropdown.html('<div class="autocomplete-no-results">No matches found</div>');
                    $ghost.val('');
                    return;
                }

                // Ghost Text Logic
                if (query && items.length > 0) {
                    const topMatch = items[0].text;
                    if (topMatch.toLowerCase().startsWith(query.toLowerCase())) {
                        $ghost.val(topMatch);
                    } else {
                        $ghost.val('');
                    }
                } else {
                    $ghost.val('');
                }

                let html = '';
                items.forEach(item => {
                    html += `<div class="autocomplete-item" data-value="${item.id}">${item.text}</div>`;
                });

                $dropdown.html(html);

                $dropdown.find('.autocomplete-item').on('click', function() {
                    const value = $(this).data('value');
                    $input.val(value);
                    $ghost.val('');
                    $dropdown.removeClass('show');
                });
            }
        }

        // QR Scanner
        function openScanner(fieldId) {
            currentScanField = fieldId;
            document.getElementById('scannerModal').classList.add('active');
            
            html5QrcodeScanner = new Html5Qrcode("qr-reader");
            html5QrcodeScanner.start(
                { facingMode: "environment" },
                { fps: 10, qrbox: 250 },
                onScanSuccess,
                onScanError
            );
        }

        function closeScanner() {
            if (html5QrcodeScanner) {
                html5QrcodeScanner.stop().then(() => {
                    document.getElementById('scannerModal').classList.remove('active');
                    html5QrcodeScanner = null;
                });
            }
        }

        function onScanSuccess(decodedText) {
            const $input = $('#' + currentScanField);
            $input.val(decodedText);
            closeScanner();
            
            // Auto-fill logic from QR
            if (currentScanField === 'fullQR') {
                 const parts = decodedText.split(/[- ]/);
                 if (parts.length > 0 && !$('#itemCode').val()) {
                     // Pattern recognition: if it starts with GH-, the item code is the second part
                     if (decodedText.startsWith('GH-') && parts.length > 1) {
                         $('#itemCode').val(parts[1]);
                     } else {
                         // Fallback: use first part
                         $('#itemCode').val(parts[0]);
                     }
                 }
            }
        }

        function onScanError(error) {
            // Ignore scan errors
        }

        // FIFO Recommendations
        async function refreshFIFO() {
            const searchTerm = document.getElementById('fifo-search').value;
            try {
                const response = await fetch('/Molded/GetMoldedStockForFIFO');
                const result = await response.json();
                
                if (result.success && result.data) {
                    let items = result.data;
                    
                    if (searchTerm) {
                        const term = searchTerm.toLowerCase();
                        items = items.filter(i => 
                            i.itemCode.toLowerCase().includes(term) || 
                            (i.fullQr && i.fullQr.toLowerCase().includes(term))
                        );
                    }
                    
                    if (items.length > 0) {
                        let html = '';
                        items.forEach(item => {
                            html += `
                                <div class="fifo-item" onclick="selectFIFOItem('${item.itemCode}', '${item.fullQr || ''}', '${item.productionDate || ''}', ${item.boxCount})">
                                    <strong>${item.itemCode}</strong><br>
                                    <small>QR: ${item.fullQr || '-'} | Stock: ${item.boxCount} boxes</small>
                                </div>
                            `;
                        });
                        document.getElementById('fifo-list').innerHTML = html;
                    } else {
                        document.getElementById('fifo-list').innerHTML = '<p class="text-center">No matching stock found</p>';
                    }
                } else {
                    document.getElementById('fifo-list').innerHTML = '<p class="text-center">Tidak ada stok tersimpan</p>';
                }
            } catch (error) {
                console.error('Error fetching FIFO:', error);
                document.getElementById('fifo-list').innerHTML = `<p class="text-center text-danger">Error: ${error.message}</p>`;
            }
        }

        function selectFIFOItem(itemCode, fullQr, productionDate, boxCount) {
            // Only fill form if we're in OUTPUT mode
            const transactionType = document.getElementById('transactionType').value;
            console.log('FIFO clicked - Transaction Type:', transactionType);
            
            // Strict check: must be exactly 'OUT'
            if (transactionType !== 'OUT' && transactionType !== 'out') {
                console.log('FIFO blocked - Not in OUTPUT mode');
                alert('FIFO Priority hanya bisa digunakan saat mode OUTPUT');
                return; // Don't fill if not in OUTPUT mode
            }
            
            console.log('FIFO allowed - Filling form');
            document.getElementById('itemCode').value = itemCode;
            document.getElementById('fullQR').value = fullQr;
            
            if (productionDate) {
                const dateVal = new Date(productionDate);
                if (!isNaN(dateVal)) {
                    document.getElementById('productionDate').value = dateVal.toISOString().split('T')[0];
                }
            }
            document.getElementById('boxCount').value = boxCount; // Set to actual available stock
        }

        // FIFO search
        document.getElementById('fifo-search').addEventListener('input', function() {
            refreshFIFO();
        });

        // Form submission
        document.getElementById('inputForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const formData = new FormData();
            formData.append('transactionType', document.getElementById('transactionType').value);
            formData.append('itemCode', document.getElementById('itemCode').value);
            formData.append('fullQr', document.getElementById('fullQR').value);
            
            const prodDate = document.getElementById('productionDate').value;
            if (prodDate) formData.append('productionDate', prodDate);
            
            formData.append('boxCount', document.getElementById('boxCount').value || 0);
            formData.append('qtyPcs', document.getElementById('qtyPcs').value || 0);

            try {
                const response = await fetch('/Molded/SubmitMoldedInput', {
                    method: 'POST',
                    body: formData
                });

                const result = await response.json();
                
                if (result.success) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Success!',
                        text: result.message,
                        confirmButtonColor: '#667eea'
                    });
                    this.reset();
                    document.getElementById('transactionType').value = currentTab.toUpperCase();
                    document.getElementById('productionDate').valueAsDate = new Date();
                    
                    if (currentTab === 'out') {
                        refreshFIFO();
                    }
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: result.message
                    });
                }
            } catch (error) {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'Failed to submit data: ' + error.message
                });
            }
        });

        // Set default date to today
        document.getElementById('productionDate').valueAsDate = new Date();
    </script>
