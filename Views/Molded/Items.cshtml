@{
    ViewData["Title"] = "Update Data Items Molded";
}

@section Scripts {
    <!-- DataTables with Buttons extension from CDN -->
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.25/css/dataTables.bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/buttons/1.7.1/css/buttons.bootstrap.min.css">
    
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.25/js/dataTables.bootstrap.min.js"></script>
    
    <!-- DataTables Buttons extension -->
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/buttons/1.7.1/js/dataTables.buttons.min.js"></script>
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/buttons/1.7.1/js/buttons.bootstrap.min.js"></script>
    
    <!-- Export libraries -->
    <script type="text/javascript" charset="utf8" src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script type="text/javascript" charset="utf8" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
    <script type="text/javascript" charset="utf8" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
    
    <!-- Export button implementations -->
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/buttons/1.7.1/js/buttons.html5.min.js"></script>
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/buttons/1.7.1/js/buttons.print.min.js"></script>
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/buttons/1.7.1/js/buttons.colVis.min.js"></script>
    
    <style>
        /* Inline editing styles */
        .editable-cell {
            cursor: pointer;
            position: relative;
            padding: 8px !important;
        }
        
        .editable-cell:hover {
            background-color: #f8f9fa !important;
        }
        
        .editable-cell.editing {
            padding: 2px !important;
            background-color: #fff3cd !important;
        }
        
        .inline-input {
            width: 100%;
            border: 2px solid #007bff;
            border-radius: 4px;
            padding: 6px;
            font-size: 12px;
            text-align: center;
        }
        
        .inline-input:focus {
            outline: none;
            border-color: #0056b3;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.3);
        }
        
        .edit-indicator {
            position: absolute;
            top: 2px;
            right: 2px;
            color: #007bff;
            font-size: 10px;
        }
        
        .save-cancel-buttons {
            margin-top: 5px;
            text-align: center;
        }
        
        .save-cancel-buttons button {
            margin: 0 2px;
            font-size: 10px;
            padding: 2px 8px;
        }
        
        .row-editing {
            background-color: rgba(255, 243, 205, 0.3) !important;
        }
        
        .edit-mode-indicator {
            background: linear-gradient(45deg, #007bff, #0056b3);
            color: white;
            padding: 5px 15px;
            border-radius: 20px;
            font-size: 12px;
            margin-bottom: 10px;
            text-align: center;
            animation: pulse 2s infinite;
        }
        
        @@keyframes pulse {
            0% { opacity: 1; }
            50% { opacity: 0.7; }
            100% { opacity: 1; }
        }
        
        .table td {
            vertical-align: middle !important;
        }
        
        /* DataTables buttons styling */
        .dt-buttons {
            margin-bottom: 10px;
        }
        
        .dt-buttons .btn {
            margin-right: 5px;
            margin-bottom: 5px;
        }
        
        /* Custom export buttons styling */
        .export-buttons {
            margin-bottom: 15px;
        }
        
        .export-buttons .btn {
            margin-right: 8px;
            margin-bottom: 5px;
        }

        .page-header {
            margin-left: 15px;
            font-size: 18px;
            font-weight: bold;
        }

    </style>
    
    <script>
    $(document).ready(function() {
        let table;
        let isEdit = false;
        let currentEditingRow = null;
        let originalRowData = null;

        // Load dashboard summary
        function loadDashboardSummary() {
            $.ajax({
                url: '@Url.Action("GetMoldedItemsDashboardSummary", "Molded")',
                type: 'GET',
                success: function(data) {
                    $('#totalItems').text(data.totalItems);
                    $('#expiredItems').text(data.expiredCount);
                    $('#nearExpiredItems').text(data.nearExpiredCount);
                    $('#belowMinItems').text(data.belowMinCount);
                },
                error: function() {
                    console.error('Failed to load dashboard summary');
                }
            });
        }

        // Initialize DataTable with export buttons
        table = $('#itemsTable').DataTable({
            "ajax": {
                "url": "@Url.Action("GetMoldedItems", "Molded")",
                "type": "GET",
                "dataSrc": "data"
            },
            "columns": [
                { 
                    "data": "itemCode", 
                    "className": "text-center",
                    "title": "Item Code",
                    "orderable": true
                },
                { 
                    "data": "qtyPerBox",
                    "className": "text-center editable-cell",
                    "title": "Qty Per Box",
                    "orderable": true,
                    "type": "num",
                    "render": function(data, type, row) {
                        if (type === 'display' || type === 'type') {
                            let value = data || 0;
                            return '<span class="cell-content">' + value + '</span>';
                        }
                        return data || 0;
                    }
                },
                { 
                    "data": "standardExp", 
                    "className": "text-center editable-cell",
                    "title": "Standard Exp",
                    "orderable": true,
                    "type": "num",
                    "render": function(data, type, row) {
                        if (type === 'display' || type === 'type') {
                            let value = data || 0;
                            let statusText = '';
                            if (row.isExpired) statusText = ' <span class="label label-danger">Expired</span>';
                            else if (row.isNearExpired) statusText = ' <span class="label label-warning">Near Exp</span>';
                            return '<span class="cell-content">' + value + '</span>' + statusText;
                        }
                        return data || 0;
                    }
                },
                { 
                    "data": "standardMin", 
                    "className": "text-center editable-cell",
                    "title": "Standard Min",
                    "orderable": true,
                    "type": "num",
                    "render": function(data, type, row) {
                        if (type === 'display' || type === 'type') {
                            let value = data || 0;
                            return '<span class="cell-content">' + value + '</span>';
                        }
                        return data || 0;
                    }
                },
                { 
                    "data": "standardMax", 
                    "className": "text-center editable-cell",
                    "title": "Standard Max",
                    "orderable": true,
                    "type": "num",
                    "render": function(data, type, row) {
                        if (type === 'display' || type === 'type') {
                            let value = data || 0;
                            return '<span class="cell-content">' + value + '</span>';
                        }
                        return data || 0;
                    }
                },
                {
                    "data": null,
                    "className": "text-center",
                    "title": "Actions",
                    "orderable": false,
                    "searchable": false,
                    "render": function(data, type, row) {
                        return '<button class="btn btn-xs btn-danger delete-btn" data-item="' + row.itemCode + '"><i class="fa fa-trash"></i> Delete</button>';
                    }
                }
            ],
            "pageLength": 25,
            "lengthMenu": [[10, 25, 50, 100, -1], [10, 25, 50, 100, "All"]],
            "responsive": true,
            "processing": true,
            "order": [[0, "asc"]], // Default sort by Item Code ascending
            "language": {
                "processing": "Loading data...",
                "emptyTable": "No data available",
                "lengthMenu": "Show _MENU_ entries",
                "zeroRecords": "No matching records found",
                "info": "Showing _START_ to _END_ of _TOTAL_ entries",
                "infoEmpty": "Showing 0 to 0 of 0 entries",
                "infoFiltered": "(filtered from _MAX_ total entries)",
                "search": "Search:",
                "paginate": {
                    "first": "First",
                    "last": "Last",
                    "next": "Next",
                    "previous": "Previous"
                }
            },
            "dom": 'Bfrtip',
            "buttons": [
                {
                    extend: 'excel',
                    text: '<i class="fa fa-file-excel-o"></i> Export Excel',
                    className: 'btn btn-success btn-sm',
                    filename: function() {
                        return 'Molded_Items_Data_' + new Date().toISOString().slice(0, 19).replace(/:/g, '-');
                    },
                    title: 'Molded Items Data Export',
                    exportOptions: {
                        columns: [0, 1, 2, 3, 4], // Exclude Actions column
                        format: {
                            body: function (data, row, column, node) {
                                // Clean HTML tags for export
                                if (typeof data === 'string') {
                                    return data.replace(/<[^>]*>/g, '').replace(/&nbsp;/g, ' ').trim();
                                }
                                return data;
                            }
                        }
                    }
                },
                {
                    extend: 'csv',
                    text: '<i class="fa fa-file-text-o"></i> Export CSV',
                    className: 'btn btn-info btn-sm',
                    filename: function() {
                        return 'Molded_Items_Data_' + new Date().toISOString().slice(0, 19).replace(/:/g, '-');
                    },
                    exportOptions: {
                        columns: [0, 1, 2, 3, 4],
                        format: {
                            body: function (data, row, column, node) {
                                if (typeof data === 'string') {
                                    return data.replace(/<[^>]*>/g, '').replace(/&nbsp;/g, ' ').trim();
                                }
                                return data;
                            }
                        }
                    }
                },
                {
                    extend: 'pdf',
                    text: '<i class="fa fa-file-pdf-o"></i> Export PDF',
                    className: 'btn btn-danger btn-sm',
                    filename: function() {
                        return 'Molded_Items_Data_' + new Date().toISOString().slice(0, 19).replace(/:/g, '-');
                    },
                    title: 'Molded Items Data Export',
                    orientation: 'landscape',
                    pageSize: 'A4',
                    exportOptions: {
                        columns: [0, 1, 2, 3, 4],
                        format: {
                            body: function (data, row, column, node) {
                                if (typeof data === 'string') {
                                    return data.replace(/<[^>]*>/g, '').replace(/&nbsp;/g, ' ').trim();
                                }
                                return data;
                            }
                        }
                    }
                },
                {
                    extend: 'print',
                    text: '<i class="fa fa-print"></i> Print',
                    className: 'btn btn-warning btn-sm',
                    title: 'Molded Items Data',
                    exportOptions: {
                        columns: [0, 1, 2, 3, 4],
                        format: {
                            body: function (data, row, column, node) {
                                if (typeof data === 'string') {
                                    return data.replace(/<[^>]*>/g, '').replace(/&nbsp;/g, ' ').trim();
                                }
                                return data;
                            }
                        }
                    }
                },
                {
                    extend: 'colvis',
                    text: '<i class="fa fa-columns"></i> Column Visibility',
                    className: 'btn btn-default btn-sm'
                }
            ],
            "drawCallback": function() {
                loadDashboardSummary();
            }
        });

        // Inline editing functionality
        $(document).on('click', '.editable-cell', function() {
            if (currentEditingRow !== null) {
                return;
            }
            
            const $cell = $(this);
            const $row = $cell.closest('tr');
            const rowData = table.row($row).data();
            const columnIndex = table.cell(this).index().column;
            const columnData = table.settings()[0].aoColumns[columnIndex].data;
            
            originalRowData = {...rowData};
            currentEditingRow = $row;
            
            $('body').prepend('<div class="edit-mode-indicator">EDIT MODE - Click outside or use Save/Cancel buttons to finish editing</div>');
            $row.addClass('row-editing');
            
            // Get current value
            let currentValue;
            if (columnData === 'qtyPerBox') {
                currentValue = rowData.qtyPerBox || 0;
            } else {
                currentValue = rowData[columnData] || '0';
            }
            
            let inputHtml = `<input type="number" class="inline-input" value="${currentValue}" data-column="${columnData}" step="0.01" min="0">`;
            
            inputHtml += `
                <div class="save-cancel-buttons">
                    <button class="btn btn-xs btn-success save-inline-btn">Save</button>
                    <button class="btn btn-xs btn-secondary cancel-inline-btn">Cancel</button>
                </div>
            `;
            
            $cell.addClass('editing').html(inputHtml);
            $cell.find('.inline-input').focus().select();
        });

        // Save inline edit
        $(document).on('click', '.save-inline-btn', function(e) {
            e.stopPropagation();
            saveInlineEdit();
        });

        // Cancel inline edit
        $(document).on('click', '.cancel-inline-btn', function(e) {
            e.stopPropagation();
            cancelInlineEdit();
        });

        // Save on Enter, Cancel on Escape
        $(document).on('keypress', '.inline-input', function(e) {
            if (e.which === 13) { 
                saveInlineEdit();
            }
        });

        $(document).on('keydown', '.inline-input', function(e) {
            if (e.which === 27) { 
                cancelInlineEdit();
            }
        });

        // Cancel on click outside
        $(document).on('click', function(e) {
            if (currentEditingRow && !$(e.target).closest('.editing').length && !$(e.target).hasClass('inline-input')) {
                cancelInlineEdit();
            }
        });

        function saveInlineEdit() {
            if (!currentEditingRow) return;
            
            const $row = currentEditingRow;
            const rowData = table.row($row).data();
            
            const updatedData = {...rowData};
            let hasChanges = false;
            
            $row.find('.inline-input').each(function() {
                const column = $(this).data('column');
                const newValue = $(this).val();
                const oldValue = originalRowData[column];
                
                const numValue = parseFloat(newValue) || 0;
                updatedData[column] = numValue;
                if (numValue !== (oldValue || 0)) hasChanges = true;
            });
            
            if (!hasChanges) {
                cancelInlineEdit();
                return;
            }
            
            const apiData = {
                ItemCode: updatedData.itemCode,
                QtyPerBox: parseFloat(updatedData.qtyPerBox) || 0,
                StandardExp: parseInt(updatedData.standardExp) || 0,
                StandardMin: parseInt(updatedData.standardMin) || 0,
                StandardMax: parseInt(updatedData.standardMax) || 0
            };
            
            $row.find('.editing').html('<i class="fa fa-spinner fa-spin"></i> Saving...');
            
            $.ajax({
                url: '@Url.Action("UpdateMoldedItem", "Molded")',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(apiData),
                success: function(response) {
                    if (response.success) {
                        table.ajax.reload(null, false);
                        loadDashboardSummary();
                        resetInlineEdit();
                        showMessage('Data updated successfully!', 'success');
                    } else {
                        showMessage('Error: ' + response.message, 'error');
                        cancelInlineEdit();
                    }
                },
                error: function() {
                    showMessage('An error occurred while saving the data.', 'error');
                    cancelInlineEdit();
                }
            });
        }

        function cancelInlineEdit() {
            if (!currentEditingRow) return;
            
            const $row = currentEditingRow;
            $row.find('.editing').each(function() {
                const $cell = $(this);
                const columnIndex = table.cell(this).index().column;
                const columnData = table.settings()[0].aoColumns[columnIndex].data;
                let originalValue;
                
                if (columnData === 'qtyPerBox') {
                    originalValue = originalRowData.qtyPerBox || 0;
                } else {
                    originalValue = originalRowData[columnData];
                }
                
                let displayValue = originalValue || 0;
                
                $cell.removeClass('editing').html('<span class="cell-content">' + displayValue + '</span>');
            });
            
            resetInlineEdit();
        }

        function resetInlineEdit() {
            if (currentEditingRow) {
                currentEditingRow.removeClass('row-editing');
            }
            currentEditingRow = null;
            originalRowData = null;
            $('.edit-mode-indicator').remove();
        }

        function showMessage(message, type) {
            const alertClass = type === 'success' ? 'alert-success' : (type === 'info' ? 'alert-info' : 'alert-danger');
            const messageHtml = `
                <div class="alert ${alertClass} alert-dismissible" style="position: fixed; top: 20px; right: 20px; z-index: 9999; min-width: 300px;">
                    <button type="button" class="close" onclick="$(this).parent().remove()">&times;</button>
                    ${message}
                </div>
            `;
            $('body').append(messageHtml);
            
            setTimeout(function() {
                $('.alert').fadeOut();
            }, 5000);
        }

        // Add New Button - Custom Dialog Version
        $('#btnAddNew').click(function() {
            console.log('Add New button clicked');
            showAddItemDialog();
        });

        // Custom Add Item Dialog
        function showAddItemDialog() {
            // Remove existing dialog if any
            $('#customAddDialog').remove();
            
            const dialogHtml = `
                <div id="customAddDialog" style="
                    position: fixed; 
                    top: 0; 
                    left: 0; 
                    width: 100%; 
                    height: 100%; 
                    background: rgba(0,0,0,0.5); 
                    z-index: 10000;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                ">
                    <div style="
                        background: white; 
                        padding: 20px; 
                        border-radius: 8px; 
                        width: 400px;
                        box-shadow: 0 4px 20px rgba(0,0,0,0.3);
                    ">
                        <h3 style="margin-top: 0; margin-bottom: 20px; color: #333;">Add New Molded Item</h3>
                        
                        <div style="margin-bottom: 15px;">
                            <label style="display: block; margin-bottom: 5px; font-weight: bold;">Item Code *:</label>
                            <input type="text" id="dialogItemCode" style="width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px;" placeholder="Enter item code">
                        </div>
                        
                        <div style="margin-bottom: 15px;">
                            <label style="display: block; margin-bottom: 5px; font-weight: bold;">Qty Per Box:</label>
                            <input type="number" id="dialogQtyPerBox" value="0" min="0" step="0.01" style="width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px;">
                        </div>
                        
                        <div style="margin-bottom: 15px;">
                            <label style="display: block; margin-bottom: 5px; font-weight: bold;">Standard Exp:</label>
                            <input type="number" id="dialogStandardExp" value="0" min="0" step="1" style="width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px;">
                        </div>
                        
                        <div style="margin-bottom: 15px;">
                            <label style="display: block; margin-bottom: 5px; font-weight: bold;">Standard Min:</label>
                            <input type="number" id="dialogStandardMin" value="0" min="0" step="1" style="width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px;">
                        </div>
                        
                        <div style="margin-bottom: 20px;">
                            <label style="display: block; margin-bottom: 5px; font-weight: bold;">Standard Max:</label>
                            <input type="number" id="dialogStandardMax" value="0" min="0" step="1" style="width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px;">
                        </div>
                        
                        <div style="text-align: right;">
                            <button id="dialogCancel" style="
                                padding: 8px 16px; 
                                margin-right: 10px; 
                                border: 1px solid #ccc; 
                                background: #f8f8f8; 
                                cursor: pointer;
                                border-radius: 4px;
                            ">Cancel</button>
                            <button id="dialogSave" style="
                                padding: 8px 16px; 
                                border: none; 
                                background: #007bff; 
                                color: white; 
                                cursor: pointer;
                                border-radius: 4px;
                            ">Save</button>
                        </div>
                    </div>
                </div>
            `;
            
            $('body').append(dialogHtml);
            
            // Focus on first input
            $('#dialogItemCode').focus();
            
            // Handle Enter key on inputs
            $('#customAddDialog input').keypress(function(e) {
                if (e.which === 13) {
                    $('#dialogSave').click();
                }
            });
            
            // Handle Escape key
            $(document).keydown(function(e) {
                if (e.which === 27) {
                    $('#dialogCancel').click();
                }
            });
            
            // Cancel button
            $('#dialogCancel').click(function() {
                $('#customAddDialog').remove();
                $(document).off('keydown');
            });
            
            // Save button
            $('#dialogSave').click(function() {
                const itemCode = $('#dialogItemCode').val().trim();
                if (!itemCode) {
                    alert('Item code is required!');
                    $('#dialogItemCode').focus();
                    return;
                }
                
                const qtyPerBox = parseFloat($('#dialogQtyPerBox').val()) || 0;
                const standardExp = parseInt($('#dialogStandardExp').val()) || 0;
                const standardMin = parseInt($('#dialogStandardMin').val()) || 0;
                const standardMax = parseInt($('#dialogStandardMax').val()) || 0;
                
                if (qtyPerBox < 0) {
                    alert('Qty Per Box must be a positive number!');
                    $('#dialogQtyPerBox').focus();
                    return;
                }
                
                const itemData = {
                    ItemCode: itemCode.toUpperCase(),
                    QtyPerBox: qtyPerBox,
                    StandardExp: standardExp,
                    StandardMin: standardMin,
                    StandardMax: standardMax
                };
                
                console.log('Sending data:', itemData);
                
                // Close dialog
                $('#customAddDialog').remove();
                $(document).off('keydown');
                
                // Show loading message
                showMessage('Creating item...', 'info');
                
                $.ajax({
                    url: '@Url.Action("CreateMoldedItem", "Molded")',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(itemData),
                    success: function(response) {
                        console.log('Response:', response);
                        
                        if (response.success) {
                            showMessage(response.message || 'Data created successfully!', 'success');
                            table.ajax.reload();
                            loadDashboardSummary();
                        } else {
                            showMessage('Error: ' + (response.message || 'Unknown error occurred'), 'error');
                        }
                    },
                    error: function(xhr, status, error) {
                        console.error('AJAX Error:', error);
                        console.error('Status:', status);
                        console.error('Response:', xhr.responseText);
                        
                        let errorMessage = 'An error occurred while creating the item.';
                        
                        try {
                            if (xhr.responseText) {
                                const errorResponse = JSON.parse(xhr.responseText);
                                if (errorResponse.message) {
                                    errorMessage = errorResponse.message;
                                }
                            }
                        } catch (e) {
                            console.error('Could not parse error response:', e);
                        }
                        
                        showMessage(errorMessage + ' (' + error + ')', 'error');
                    }
                });
            });
        }

        // Refresh Button
        $('#btnRefresh').click(function() {
            table.ajax.reload();
            loadDashboardSummary();
        });

        // Delete Button Click
        $(document).on('click', '.delete-btn', function() {
            const itemCode = $(this).data('item');
            
            if (confirm('Are you sure you want to delete this item: ' + itemCode + '?')) {
                const requestData = { ItemCode: itemCode };
                
                $.ajax({
                    url: '@Url.Action("DeleteMoldedItem", "Molded")',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(requestData),
                    success: function(response) {
                        if (response.success) {
                            showMessage('Data deleted successfully!', 'success');
                            table.ajax.reload();
                            loadDashboardSummary();
                        } else {
                            showMessage('Error: ' + response.message, 'error');
                        }
                    },
                    error: function(xhr, status, error) {
                        console.error('Delete Error:', error);
                        console.error('Response:', xhr.responseText);
                        showMessage('An error occurred while deleting the data.', 'error');
                    }
                });
            }
        });

        // Initial load
        loadDashboardSummary();
    });
    </script>
}

