    <div class="row">
        <div class="col-sm-8">
            <div class="page-header">
                <h1><i class="gi gi-table sm-6"></i> Update Data Molded Items <small>Click on any cell (except Item Code) to edit inline</small></h1>
            </div>
        </div>
        <div class="col-sm-4 text-right" style="margin-top: 30px;">
            <ol class="breadcrumb">
                <li><a href="@Url.Action("Index", "Molded")"><i class="fa fa-dashboard"></i> MOLDED Dashboard</a></li>
                <li class="active">Molded Items</li>
            </ol>
        </div>
    </div>
</div>

<!-- Dashboard Summary -->
<div class="row" id="dashboardSummary" style="margin-bottom: 20px;">
    <div class="col-sm-6 col-lg-3">
        <a href="javascript:void(0)" class="widget widget-hover-effect2">
            <div class="widget-extra themed-background-dark">
                <h4 class="widget-content-light"><strong>Total Items</strong></h4>
            </div>
            <div class="widget-extra-full">
                <span class="h2 text-primary animation-expandOpen" id="totalItems">0</span>
            </div>
        </a>
    </div>
    <div class="col-sm-6 col-lg-3">
        <a href="javascript:void(0)" class="widget widget-hover-effect2">
            <div class="widget-extra themed-background-danger">
                <h4 class="widget-content-light"><strong>Expired</strong></h4>
            </div>
            <div class="widget-extra-full">
                <span class="h2 text-danger animation-expandOpen" id="expiredItems">0</span>
            </div>
        </a>
    </div>
    <div class="col-sm-6 col-lg-3">
        <a href="javascript:void(0)" class="widget widget-hover-effect2">
            <div class="widget-extra themed-background-warning">
                <h4 class="widget-content-light"><strong>Near Expired</strong></h4>
            </div>
            <div class="widget-extra-full">
                <span class="h2 text-warning animation-expandOpen" id="nearExpiredItems">0</span>
            </div>
        </a>
    </div>
    <div class="col-sm-6 col-lg-3">
        <a href="javascript:void(0)" class="widget widget-hover-effect2">
            <div class="widget-extra themed-background-info">
                <h4 class="widget-content-light"><strong>Below Min</strong></h4>
            </div>
            <div class="widget-extra-full">
                <span class="h2 text-info animation-expandOpen" id="belowMinItems">0</span>
            </div>
        </a>
    </div>
</div>

<!-- Page Content -->
<div class="row">
    <div class="col-lg-12">
        <!-- Items Table Block -->
        <div class="block">
            <div class="block-title">
                <h2>Molded Items Management</h2>
                <div class="block-options pull-right">
                    <a href="@Url.Action("Index", "Molded")" class="btn btn-sm btn-default">
                        <i class="fa fa-dashboard"></i> Back to Dashboard
                    </a>
                    <button type="button" class="btn btn-sm btn-success" id="btnAddNew">
                        <i class="fa fa-plus"></i> Add New Item
                    </button>
                    <button type="button" class="btn btn-sm btn-info" id="btnRefresh">
                        <i class="fa fa-refresh"></i> Refresh
                    </button>
                </div>
            </div>
            <div class="table-responsive">
                <table id="itemsTable" class="table table-vcenter table-condensed table-bordered table-striped" style="width:100%">
                    <thead>
                        <tr>
                            <th class="text-center">Item Code</th>
                            <th class="text-center">Qty Per Box</th>
                            <th class="text-center">Standard Exp</th>
                            <th class="text-center">Standard Min</th>
                            <th class="text-center">Standard Max</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Data will be loaded via AJAX -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

