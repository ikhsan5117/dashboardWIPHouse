        padding: 0 10px;
        font-size: 16px;
        background: transparent;
        outline: none;
        min-width: 0;
        height: 100%;
        color: #555;
    }

    .form-input-enhanced:focus {
        outline: none;
        box-shadow: none !important;
        border: none !important;
    }

    .form-input-enhanced::placeholder {
        color: #bbb;
    }

    .scan-btn-enhanced {
        width: 60px;
        height: 100%;
        background: linear-gradient(90deg, #81C784 0%, #4CAF50 100%); /* Green Gradient */
        border: none;
        border-top-right-radius: 5px; /* Slightly less than parent (8px - 2px border = 6px) */
        border-bottom-right-radius: 5px;
        cursor: pointer;
        transition: all 0.2s;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
        /* Fix for gradient overflow on rounded border */
        margin-right: -1px; 
    }

    .scan-btn-enhanced:hover {
        background: linear-gradient(90deg, #66BB6A 0%, #43A047 100%);
    }

    .scan-btn-enhanced svg {
        fill: white;
        width: 28px;
        height: 28px;
    }

    /* Autocomplete Dropdown Styling */
    .input-wrapper-enhanced {
        position: relative;
        /* z-index is handled dynamically via JS or specific stacking context if needed, 
           but removing initial high z-index here avoids stacking issues with other elements */
    }

    .autocomplete-dropdown {
        position: absolute;
        top: 100%;
        left: 0;
        right: 0; /* Matches width of parent wrapper */
        background: white;
        border: 2px solid #81C784;
        border-top: none; /* Seamless look if connected, or keep border for floating look */
        border-radius: 0 0 8px 8px; /* Rounded only at bottom */
        box-shadow: 0 10px 25px rgba(0,0,0,0.15); /* Stronger shadow */
        margin-top: -2px; /* Pull up to overlap border slightly */
        max-height: 250px;
        overflow-y: auto;
        display: none;
        z-index: 9999; /* Super high to float above EVERYTHING */
        box-sizing: border-box; /* Fix width calculation */
        padding: 0;
    }

    .autocomplete-dropdown.show {
        display: block;
    }
    
    /* Ensure the input wrapper that is ACTIVE has higher z-index than the one below it */
    .form-group {
        position: relative;
        z-index: 1;
    }
    
    .form-group:focus-within {
        z-index: 100; /* Active group pops to front */
    }

    .autocomplete-item {
        padding: 12px 15px;
        cursor: pointer;
        transition: all 0.2s;
        border-bottom: 1px solid #f0f0f0;
    }

    .autocomplete-item:last-child {
        border-bottom: none;
    }

    .autocomplete-item:hover,
    .autocomplete-item.active {
        background-color: var(--green-primary);
        color: white;
    }

    .autocomplete-item.selected {
        background-color: var(--green-light);
        font-weight: 600;
    }
    
    /* Ghost Input for Inline Autocomplete */
    .ghost-input {
        position: absolute;
        left: 50px; /* Matches Icon Width */
        top: 0;
        height: 100%;
        width: calc(100% - 110px); /* 100% - (Icon 50px + Btn 60px) */
        border: none !important;
        background: transparent !important;
        padding: 0 10px; /* Matches Input Padding */
        font-size: 16px; /* Matches Input Font */
        font-family: 'Inter', sans-serif;
        color: #BDBDBD; /* Grey Text (Ghost) */
        z-index: 5; /* Below main input */
        pointer-events: none; /* Let clicks pass through */
        white-space: nowrap;
        overflow: hidden;
    }
    
    .input-wrapper-enhanced input.form-input-enhanced {
        z-index: 10;
        position: relative;
    }

    .autocomplete-no-results {
        padding: 15px;
        text-align: center;
        color: #999;
        font-style: italic;
    }

    .autocomplete-loading {
        padding: 15px;
        text-align: center;
        color: #666;
    }
</style>
</head>
