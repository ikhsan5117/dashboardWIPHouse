@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - Dashboard WIPHouse</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            height: 100vh;
            background: linear-gradient(135deg, #667eea 0%, #bd4b4b 50%, #fb9393 100%);
            background-size: 400% 400%;
            animation: gradientShift 15s ease infinite;
            display: flex;
            justify-content: center;
            align-items: center;
            position: relative;
            overflow: hidden;
        }

        @@keyframes gradientShift {
            0% {
                background-position: 0% 50%;
            }

            50% {
                background-position: 100% 50%;
            }

            100% {
                background-position: 0% 50%;
            }
        }

        /* Animated background elements */
        .bg-shapes {
            position: absolute;
            width: 100%;
            height: 100%;
            overflow: hidden;
            z-index: 1;
        }

        .shape {
            position: absolute;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.1);
            animation: float 6s ease-in-out infinite;
        }

        .shape:nth-child(1) {
            width: 80px;
            height: 80px;
            top: 10%;
            left: 20%;
            animation-delay: 0s;
        }

        .shape:nth-child(2) {
            width: 120px;
            height: 120px;
            top: 70%;
            left: 80%;
            animation-delay: -2s;
        }

        .shape:nth-child(3) {
            width: 60px;
            height: 60px;
            top: 40%;
            left: 10%;
            animation-delay: -4s;
        }

        .shape:nth-child(4) {
            width: 100px;
            height: 100px;
            top: 20%;
            left: 70%;
            animation-delay: -1s;
        }

        .shape:nth-child(5) {
            width: 90px;
            height: 90px;
            top: 60%;
            left: 20%;
            animation-delay: -3s;
        }

        @@keyframes float {

            0%,
            100% {
                transform: translateY(0px) rotate(0deg);
            }

            50% {
                transform: translateY(-20px) rotate(180deg);
            }
        }

        /* Birds animation */
        .birds {
            position: absolute;
            top: 15%;
            right: 15%;
            z-index: 2;
        }

        .bird {
            color: rgba(255, 255, 255, 0.6);
            font-size: 14px;
            animation: fly 8s linear infinite;
            position: absolute;
        }

        .bird:nth-child(1) {
            animation-delay: 0s;
        }

        .bird:nth-child(2) {
            animation-delay: -2s;
            top: 10px;
            left: -20px;
        }

        .bird:nth-child(3) {
            animation-delay: -4s;
            top: -5px;
            left: -10px;
        }

        @@keyframes fly {
            0% {
                transform: translateX(0px) translateY(0px);
                opacity: 0;
            }

            10% {
                opacity: 1;
            }

            90% {
                opacity: 1;
            }

            100% {
                transform: translateX(-200px) translateY(-50px);
                opacity: 0;
            }
        }

        .login-container {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border-radius: 20px;
            padding: 40px;
            width: 100%;
            max-width: 500px;
            box-shadow: 0 25px 50px rgba(0, 0, 0, 0.2);
            position: relative;
            z-index: 10;
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .login-header {
            text-align: center;
            margin-bottom: 40px;
        }

        .login-header h1 {
            background: linear-gradient(135deg, #667eea, #bd4b4b);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            font-size: 2.5em;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .login-header p {
            color: #666;
            font-size: 16px;
            margin: 0;
        }

        .form-group {
            margin-bottom: 25px;
            position: relative;
        }

        .form-control {
            width: 100%;
            padding: 15px 20px 15px 50px;
            border: 2px solid rgba(102, 126, 234, 0.1);
            border-radius: 50px;
            font-size: 16px;
            background: rgba(255, 255, 255, 0.8);
            transition: all 0.3s ease;
            outline: none;
        }

        

        .form-control:focus {
            border-color: #667eea;
            box-shadow: 0 0 20px rgba(102, 126, 234, 0.2);
            background: white;
        }

        .form-control::placeholder {
            color: #aaa;
        }

        .input-icon {
            position: absolute;
            left: 18px;
            top: 50%;
            transform: translateY(-50%);
            color: #667eea;
            font-size: 18px;
            z-index: 2;
        }

        .btn-login {
            width: 100%;
            padding: 15px;
            border: none;
            border-radius: 50px;
            background: linear-gradient(135deg, #667eea, #bd4b4b);
            color: white;
            font-size: 16px;
            font-weight: bold;
            cursor: pointer;
            transition: all 0.3s ease;
            margin-top: 10px;
        }

        .btn-login:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(102, 126, 234, 0.3);
        }

        .btn-login:active {
            transform: translateY(0px);
        }

        .checkbox-group {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin: 20px 0;
            font-size: 14px;
        }

        .checkbox-wrapper {
            display: flex;
            align-items: center;
        }

        .checkbox-wrapper input[type="checkbox"] {
            margin-right: 8px;
            accent-color: #667eea;
        }

        .forgot-link {
            color: #667eea;
            text-decoration: none;
            font-weight: 500;
            transition: color 0.3s ease;
        }

        .forgot-link:hover {
            color: #bd4b4b;
        }

        .alert {
            padding: 12px;
            border-radius: 10px;
            margin-bottom: 20px;
            text-align: center;
            font-size: 14px;
        }

        .alert-danger {
            background: rgba(220, 53, 69, 0.1);
            color: #dc3545;
            border: 1px solid rgba(220, 53, 69, 0.2);
        }

        .create-account {
            text-align: center;
            margin-top: 25px;
            padding-top: 25px;
            border-top: 1px solid rgba(102, 126, 234, 0.1);
            color: #666;
            font-size: 14px;
        }

        .create-account a {
            color: #667eea;
            text-decoration: none;
            font-weight: bold;
        }

        .create-account a:hover {
            text-decoration: underline;
        }

        /* Responsive design */
        @@media (max-width: 480px) {
            body {
                padding: 20px;
            }

            .login-container {
                padding: 30px 25px;
            }

            .login-header h1 {
                font-size: 2em;
            }
        }
    </style>
</head>

<body>
    <!-- Animated background shapes -->
    <div class="bg-shapes">
        <div class="shape"></div>
        <div class="shape"></div>
        <div class="shape"></div>
        <div class="shape"></div>
        <div class="shape"></div>
    </div>

    <!-- Flying birds -->
    <div class="birds">
        <div class="bird"><i class="fas fa-dove"></i></div>
        <div class="bird"><i class="fas fa-dove"></i></div>
        <div class="bird"><i class="fas fa-dove"></i></div>
    </div>

    <div class="login-container">
        <div class="login-header">
            <a href="#">
                <img src="~/img/logo.png" alt="Logo"
                    style="max-height:80px; width:auto; display:block; margin:0 auto;" />
            </a>
            <p style="margin-top:15px;">Welcome to Dashboard WIPHouse</p>
        </div>

        <form method="post" id="loginForm">
            <div class="form-group">
                <i class="fas fa-database input-icon"></i>
                <select name="database" class="form-control" required id="databaseSelect">
                    <option value="">Select Area</option>
                    <option value="HOSE">HOSE (Green Hose & After Washing)</option>
                    <option value="RVI">RVI</option>
                    <option value="MOLDED">MOLDED</option>
                    <option value="BTR">BTR</option>
                </select>
            </div>

            <div class="form-group">
                <i class="fas fa-user input-icon"></i>
                <input type="text" name="username" class="form-control" placeholder="Username" required id="usernameInput" />
            </div>

            <div class="form-group">
                <i class="fas fa-lock input-icon"></i>
                <input type="password" name="password" class="form-control" placeholder="Password" required id="passwordInput" />
            </div>

            <div class="checkbox-group">
                <div class="checkbox-wrapper">
                    <input type="checkbox" id="remember" name="remember">
                    <label for="remember">Remember me</label>
                </div>
                <a href="#" class="forgot-link">Forgot password?</a>
            </div>

            @if (ViewBag.Error != null)
            {
                <div id="errorMessage" class="alert alert-danger">
                    <i class="fas fa-exclamation-triangle"></i> @ViewBag.Error
                </div>
            }

            <!-- Success message placeholder -->
            @if (ViewBag.Success != null)
            {
                <div id="successMessage" class="alert" style="background: rgba(40, 167, 69, 0.1); color: #28a745; border: 1px solid rgba(40, 167, 69, 0.2);">
                    <i class="fas fa-check-circle"></i> @ViewBag.Success
                </div>
            }


            <button type="submit" class="btn-login">LOGIN</button>
        </form>

        <div class="create-account">
            Don't have an account? <a href="#">Create Account</a>
        </div>
    </div>

    <script>
        // Wait for DOM to be ready
        document.addEventListener('DOMContentLoaded', function() {
            const databaseSelect = document.getElementById('databaseSelect');
            const usernameInput = document.getElementById('usernameInput');
            const passwordInput = document.getElementById('passwordInput');
            const loginForm = document.getElementById('loginForm');
            const loginBtn = document.querySelector('.btn-login');

            // Auto-select database based on username
            usernameInput.addEventListener('input', function() {
                const username = this.value.toLowerCase();
                
                if (username.includes('rvi')) {
                    databaseSelect.value = 'RVI';
                    updatePlaceholders();
                    console.log('Auto-selected RVI area for username:', username);
                } else if (username.includes('molded')) {
                    databaseSelect.value = 'MOLDED';
                    updatePlaceholders();
                    console.log('Auto-selected MOLDED area for username:', username);
                } else if (username.includes('btr')) {
                    databaseSelect.value = 'BTR';
                    updatePlaceholders();
                    console.log('Auto-selected BTR area for username:', username);
                } else if (username === 'admin' || username === 'user') {
                    databaseSelect.value = 'HOSE';
                    updatePlaceholders();
                    console.log('Auto-selected HOSE area for username:', username);
                }
            });

            // Handle database selection change
            databaseSelect.addEventListener('change', function() {
                updatePlaceholders();
                console.log('Area selected:', this.value);
            });

            // Update placeholders based on selected database
            function updatePlaceholders() {
                if (databaseSelect.value === 'HOSE') {
                    usernameInput.placeholder = 'Username (admin/user)';
                    passwordInput.placeholder = 'Password (admin123/user123)';
                } else if (databaseSelect.value === 'RVI') {
                    usernameInput.placeholder = 'Username (adminRVI/userRVI)';
                    passwordInput.placeholder = 'Password (rvi123)';
                } else if (databaseSelect.value === 'MOLDED') {
                    usernameInput.placeholder = 'Username (adminMolded321/userMolded321)';
                    passwordInput.placeholder = 'Password (molded321)';
                } else if (databaseSelect.value === 'BTR') {
                    usernameInput.placeholder = 'Username (adminBTR)';
                    passwordInput.placeholder = 'Password (BTR123)';
                } else {
                    usernameInput.placeholder = 'Username';
                    passwordInput.placeholder = 'Password';
                }
            }


            // Form validation and submission
            loginForm.addEventListener('submit', function(e) {
                e.preventDefault();
                
                // Validate form
                if (!databaseSelect.value) {
                    alert('⚠️ Please select an area first!');
                    databaseSelect.focus();
                    return false;
                }
                
                if (!usernameInput.value.trim()) {
                    alert('⚠️ Please enter username!');
                    usernameInput.focus();
                    return false;
                }
                
                if (!passwordInput.value.trim()) {
                    alert('⚠️ Please enter password!');
                    passwordInput.focus();
                    return false;
                }

                // Show loading state
                loginBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Logging in...';
                loginBtn.disabled = true;

                // Log form data for debugging
                console.log('Login attempt:', {
                    area: databaseSelect.value,
                    username: usernameInput.value,
                    password: '***'
                });

                // Submit form
                this.submit();
            });

            // Efek fokus pada input
            document.querySelectorAll('.form-control').forEach(input => {
                input.addEventListener('focus', function () {
                    this.parentElement.querySelector('.input-icon').style.color = '#667eea';
                });

                input.addEventListener('blur', function () {
                    this.parentElement.querySelector('.input-icon').style.color = '#aaa';
                });
            });


        });
    </script>

</body>

</html>